(«k:defun» «f:file-truename» (filename «t:&optional» counter prev-dirs)
  «d:"Return the truename of FILENAME.
If FILENAME is not absolute, first expands it against `«c:default-directory»'.
The truename of a file name is found by chasing symbolic links
both at the level of the file and at the level of the directories
containing it, until no links are left at any level.

\(fn FILENAME)"»  «m:;; »«x:Don't document the optional arguments.
»  «m:;; »«x:COUNTER and PREV-DIRS are only used in recursive calls.
»  «m:;; »«x:COUNTER can be a cons cell whose car is the count of how many
»  «m:;; »«x:more links to chase before getting an error.
»  «m:;; »«x:PREV-DIRS can be a cons cell whose car is an alist
»  «m:;; »«x:of truenames we've just recently computed.
»  («k:cond» ((or (string= filename «s:""») (string= filename «s:"~"»))
	 (setq filename (expand-file-name filename))
	 («k:if» (string= filename «s:""»)
	     (setq filename «s:"/"»)))
	((and (string= (substring filename 0 1) «s:"~"»)
	      (string-match «s:"~[«n:^»/]*/?"» filename))
	 («k:let» ((first-part
		(substring filename 0 (match-end 0)))
	       (rest (substring filename (match-end 0))))
	   (setq filename (concat (expand-file-name first-part) rest)))))

  (or counter (setq counter (list 100)))
  («k:let» (done
	«m:;; »«x:For speed, remove the ange-ftp completion handler from the list.
»	«m:;; »«x:We know it's not needed here.
»	«m:;; »«x:For even more speed, do this only on the outermost call.
»	(file-name-handler-alist
	 («k:if» prev-dirs file-name-handler-alist
	   («k:let» ((tem (copy-sequence file-name-handler-alist)))
	     (delq (rassq 'ange-ftp-completion-hook-function tem) tem)))))
    (or prev-dirs (setq prev-dirs (list nil)))

    «m:;; »«x:andrewi@harlequin.co.uk - on Windows, there is an issue with
»    «m:;; »«x:case differences being ignored by the OS, and short "8.3 DOS"
»    «m:;; »«x:name aliases existing for all files.  (The short names are not
»    «m:;; »«x:reported by directory-files, but can be used to refer to files.)
»    «m:;; »«x:It seems appropriate for file-truename to resolve these issues in
»    «m:;; »«x:the most natural way, which on Windows is to call the function
»    «m:;; »«x:`«c:w32-long-file-name»' - this returns the exact name of a file as
»    «m:;; »«x:it is stored on disk (expanding short name aliases with the full
»    «m:;; »«x:name in the process).
»    («k:if» (eq system-type 'windows-nt)
	(«k:unless» (string-match «s:"[[*?]"» filename)
	  «m:;; »«x:If filename exists, use its long name.  If it doesn't
»	  «m:;; »«x:exist, the recursion below on the directory of filename
»	  «m:;; »«x:will drill down until we find a directory that exists,
»	  «m:;; »«x:and use the long name of that, with the extra
»	  «m:;; »«x:non-existent path components concatenated.
»	  («k:let» ((longname (w32-long-file-name filename)))
	    («k:if» longname
		(setq filename longname)))))

    «m:;; »«x:If this file directly leads to a link, process that iteratively
»    «m:;; »«x:so that we don't use lots of stack.
»    («k:while» (not done)
      (setcar counter (1- (car counter)))
      («k:if» (< (car counter) 0)
	  («w:error» «s:"Apparent cycle of symbolic links for %s"» filename))
      («k:let» ((handler (find-file-name-handler filename 'file-truename)))
	«m:;; »«x:For file name that has a special handler, call handler.
»	«m:;; »«x:This is so that ange-ftp can save time by doing a no-op.
»	(«k:if» handler
	    (setq filename (funcall handler 'file-truename filename)
		  done t)
	  («k:let» ((dir (or (file-name-directory filename) default-directory))
		target dirfile)
	    «m:;; »«x:Get the truename of the directory.
»	    (setq dirfile (directory-file-name dir))
	    «m:;; »«x:If these are equal, we have the (or a) root directory.
»	    (or (string= dir dirfile)
		(and (memq system-type '(windows-nt ms-dos cygwin nacl))
		     (eq (compare-strings dir 0 nil dirfile 0 nil t) t))
		«m:;; »«x:If this is the same dir we last got the truename for,
»		«m:;; »«x:save time--don't recalculate.
»		(«k:if» (assoc dir (car prev-dirs))
		    (setq dir (cdr (assoc dir (car prev-dirs))))
		  («k:let» ((old dir)
			(new (file-name-as-directory (file-truename dirfile counter prev-dirs))))
		    (setcar prev-dirs (cons (cons old new) (car prev-dirs)))
		    (setq dir new))))
	    («k:if» (equal «s:".."» (file-name-nondirectory filename))
		(setq filename
		      (directory-file-name (file-name-directory (directory-file-name dir)))
		      done t)
	      («k:if» (equal «s:"."» (file-name-nondirectory filename))
		  (setq filename (directory-file-name dir)
			done t)
		«m:;; »«x:Put it back on the file name.
»		(setq filename (concat dir (file-name-nondirectory filename)))
		«m:;; »«x:Is the file name the name of a link?
»		(setq target (file-symlink-p filename))
		(«k:if» target
		    «m:;; »«x:Yes => chase that link, then start all over
»		    «m:;; »«x:since the link may point to a directory name that uses links.
»		    «m:;; »«x:We can't safely use expand-file-name here
»		    «m:;; »«x:since target might look like foo/../bar where foo
»		    «m:;; »«x:is itself a link.  Instead, we handle . and .. above.
»		    (setq filename
			  («k:if» (file-name-absolute-p target)
			      target
			    (concat dir target))
			  done nil)
		  «m:;; »«x:No, we are done!
»		  (setq done t))))))))
    filename))

(«k:defun» «f:file-chase-links» (filename «t:&optional» limit)
  «d:"Chase links in FILENAME until a name that is not a link.
Unlike `«c:file-truename»', this does not check whether a parent
directory name is a symbolic link.
If the optional argument LIMIT is a number,
it means chase no more than that many links and then stop."»
  («k:let» (tem (newname filename)
	    (count 0))
    («k:while» (and (or (null limit) (< count limit))
		(setq tem (file-symlink-p newname)))
      («k:save-match-data»
	(«k:if» (and (null limit) (= count 100))
	    («w:error» «s:"Apparent cycle of symbolic links for %s"» filename))
	«m:;; »«x:In the context of a link, `«c://»' doesn't mean what Emacs thinks.
»	(«k:while» (string-match «s:"//+"» tem)
	  (setq tem (replace-match «s:"/"» nil nil tem)))
	«m:;; »«x:Handle `«c:..»' by hand, since it needs to work in the
»	«m:;; »«x:target of any directory symlink.
»	«m:;; »«x:This code is not quite complete; it does not handle
»	«m:;; »«x:embedded .. in some cases such as ./../foo and foo/bar/../../../lose.
»	(«k:while» (string-match «s:"\\`\\.\\./"» tem)
	  (setq tem (substring tem 3))
	  (setq newname (expand-file-name newname))
	  «m:;; »«x:Chase links in the default dir of the symlink.
»	  (setq newname
		(file-chase-links
		 (directory-file-name (file-name-directory newname))))
	  «m:;; »«x:Now find the parent of that dir.
»	  (setq newname (file-name-directory newname)))
	(setq newname (expand-file-name tem (file-name-directory newname)))
	(setq count (1+ count))))
    newname))

«m:;; »«x:A handy function to display file sizes in human-readable form.
»«m:;; »«x:See http://en.wikipedia.org/wiki/Kibibyte for the reference.
»(«k:defun» «f:file-size-human-readable» (file-size «t:&optional» flavor)
  «d:"Produce a string showing FILE-SIZE in human-readable form.

Optional second argument FLAVOR controls the units and the display format:

 If FLAVOR is nil or omitted, each kilobyte is 1024 bytes and the produced
    suffixes are \"k\", \"M\", \"G\", \"T\", etc.
 If FLAVOR is `«c:si»', each kilobyte is 1000 bytes and the produced suffixes
    are \"k\", \"M\", \"G\", \"T\", etc.
 If FLAVOR is `«c:iec»', each kilobyte is 1024 bytes and the produced suffixes
    are \"KiB\", \"MiB\", \"GiB\", \"TiB\", etc."»
  («k:let» ((power («k:if» (or (null flavor) (eq flavor 'iec))
		   1024.0
		 1000.0))
	(post-fixes
	 «m:;; »«x:none, kilo, mega, giga, tera, peta, exa, zetta, yotta
»	 (list «s:""» «s:"k"» «s:"M"» «s:"G"» «s:"T"» «s:"P"» «s:"E"» «s:"Z"» «s:"Y"»)))
    («k:while» (and (>= file-size power) (cdr post-fixes))
      (setq file-size (/ file-size power)
	    post-fixes (cdr post-fixes)))
    (format («k:if» (> (mod file-size 1.0) 0.05)
		«s:"%.1f%s%s"»
	      «s:"%.0f%s%s"»)
	    file-size
	    («k:if» (and (eq flavor 'iec) (string= (car post-fixes) «s:"k"»))
		«s:"K"»
	      (car post-fixes))
	    («k:if» (eq flavor 'iec) «s:"iB"» «s:""»))))

(«k:defun» «f:make-temp-file» (prefix «t:&optional» dir-flag suffix)
  «d:"Create a temporary file.
The returned file name (created by appending some random characters at the end
of PREFIX, and expanding against `«c:temporary-file-directory»' if necessary),
is guaranteed to point to a newly created empty file.
You can then use `«c:write-region»' to write new data into the file.

If DIR-FLAG is non-nil, create a new empty directory instead of a file.

If SUFFIX is non-nil, add that at the end of the file name."»
  «m:;; »«x:Create temp files with strict access rights.  It's easy to
»  «m:;; »«x:loosen them later, whereas it's impossible to close the
»  «m:;; »«x:time-window of loose permissions otherwise.
»  (with-file-modes ?\700
    («k:let» (file)
      («k:while» («k:condition-case» ()
		 («k:progn»
		   (setq file
			 (make-temp-name
			  («k:if» (zerop (length prefix))
			      (file-name-as-directory
			       temporary-file-directory)
			    (expand-file-name prefix
					      temporary-file-directory))))
		   («k:if» suffix
		       (setq file (concat file suffix)))
		   («k:if» dir-flag
		       (make-directory file)
		     (write-region «s:""» nil file nil 'silent nil 'excl))
		   nil)
	       (file-already-exists t))
	«m:;; »«x:the file was somehow created by someone else between
»	«m:;; »«x:`«c:make-temp-name»' and `«c:write-region»', let's try again.
»	nil)
      file)))

