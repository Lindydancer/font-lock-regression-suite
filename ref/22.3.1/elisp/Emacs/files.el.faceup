    (setq directory
	  (file-name-as-directory (expand-file-name (or directory
							default-directory))))
    (setq filename (expand-file-name filename))
    («k:let» ((fremote (file-remote-p filename))
	  (dremote (file-remote-p directory))
	  (fold-case (or (memq system-type '(ms-dos cygwin windows-nt))
			 read-file-name-completion-ignore-case)))
      («k:if» «m:;; »«x:Conditions for separate trees
»	  (or
	   «m:;; »«x:Test for different filesystems on DOS/Windows
»	   (and
	    «m:;; »«x:Should `«c:cygwin»' really be included here?  --stef
»	    (memq system-type '(ms-dos cygwin windows-nt))
	    (or
	     «m:;; »«x:Test for different drive letters
»	     (not (eq t (compare-strings filename 0 2 directory 0 2 fold-case)))
	     «m:;; »«x:Test for UNCs on different servers
»	     (not (eq t (compare-strings
			 («k:progn»
			   («k:if» (string-match «s:"\\`//«h:\\»«o:(»[«n:^»:/]+«h:\\»«o:)»/"» filename)
			       (match-string 1 filename)
			     «m:;; »«x:Windows file names cannot have ? in
»			     «m:;; »«x:them, so use that to detect when
»			     «m:;; »«x:neither FILENAME nor DIRECTORY is a
»			     «m:;; »«x:UNC.
»			     «s:"?"»))
			 0 nil
			 («k:progn»
			   («k:if» (string-match «s:"\\`//«h:\\»«o:(»[«n:^»:/]+«h:\\»«o:)»/"» directory)
			       (match-string 1 directory)
			     «s:"?"»))
			 0 nil t)))))
	   «m:;; »«x:Test for different remote file system identification
»	   (not (equal fremote dremote)))
	  filename
        («k:let» ((ancestor «s:"."»)
	      (filename-dir (file-name-as-directory filename)))
          («k:while» (not
		  (or (string-prefix-p directory filename-dir fold-case)
		      (string-prefix-p directory filename fold-case)))
            (setq directory (file-name-directory (substring directory 0 -1))
		  ancestor («k:if» (equal ancestor «s:"."»)
			       «s:".."»
			     (concat «s:"../"» ancestor))))
          «m:;; »«x:Now ancestor is empty, or .., or ../.., etc.
»          («k:if» (string-prefix-p directory filename fold-case)
	      «m:;; »«x:We matched within FILENAME's directory part.
»	      «m:;; »«x:Add the rest of FILENAME onto ANCESTOR.
»	      («k:let» ((rest (substring filename (length directory))))
		(«k:if» (and (equal ancestor «s:"."») (not (equal rest «s:""»)))
		    «m:;; »«x:But don't bother with ANCESTOR if it would give us `«c:./»'.
»		    rest
		  (concat (file-name-as-directory ancestor) rest)))
            «m:;; »«x:We matched FILENAME's directory equivalent.
»            ancestor))))))

(«k:defun» «f:save-buffer» («t:&optional» arg)
  «d:"Save current buffer in visited file if modified.
Variations are described below.

By default, makes the previous version into a backup file
 if previously requested or if this is the first save.
Prefixed with one \\[«c:universal-argument»], marks this version
 to become a backup when the next save is done.
Prefixed with two \\[«c:universal-argument»]'s,
 unconditionally makes the previous version into a backup file.
Prefixed with three \\[«c:universal-argument»]'s, marks this version
 to become a backup when the next save is done,
 and unconditionally makes the previous version into a backup file.

With a numeric prefix argument of 0, never make the previous version
into a backup file.

If a file's name is FOO, the names of its numbered backup versions are
 FOO.~i~ for various integers i.  A non-numbered backup file is called FOO~.
Numeric backups (rather than FOO~) will be made if value of
 `«c:version-control»' is not the atom `«c:never»' and either there are already
 numeric versions of the file being backed up, or `«c:version-control»' is
 non-nil.
We don't want excessive versions piling up, so there are variables
 `«c:kept-old-versions»', which tells Emacs how many oldest versions to keep,
 and `«c:kept-new-versions»', which tells how many newest versions to keep.
 Defaults are 2 old versions and 2 new.
`«c:dired-kept-versions»' controls dired's clean-directory (.) command.
If `«c:delete-old-versions»' is nil, system will query user
 before trimming versions.  Otherwise it does it silently.

If `«c:vc-make-backup-files»' is nil, which is the default,
 no backup files are made for files managed by version control.
 (This is because the version control system itself records previous versions.)

See the subroutine `«c:basic-save-buffer»' for more information."»
  (interactive «s:"p"»)
  («k:let» ((modp (buffer-modified-p))
	(make-backup-files (or (and make-backup-files (not (eq arg 0)))
			       (memq arg '(16 64)))))
    (and modp (memq arg '(16 64)) (setq buffer-backed-up nil))
    «m:;; »«x:We used to display the message below only for files > 50KB, but
»    «m:;; »«x:then Rmail-mbox never displays it due to buffer swapping.  If
»    «m:;; »«x:the test is ever re-introduced, be sure to handle saving of
»    «m:;; »«x:Rmail files.
»    («k:if» (and modp
             (buffer-file-name)
             (not noninteractive)
             (not save-silently))
	(message «s:"Saving file %s..."» (buffer-file-name)))
    (basic-save-buffer (called-interactively-p 'any))
    (and modp (memq arg '(4 64)) (setq buffer-backed-up nil))))

(«k:defun» «f:delete-auto-save-file-if-necessary» («t:&optional» force)
  «d:"Delete auto-save file for current buffer if `«c:delete-auto-save-files»' is t.
Normally delete only if the file was written by this Emacs since
the last real save, but optional arg FORCE non-nil means delete anyway."»
  (and buffer-auto-save-file-name delete-auto-save-files
       (not (string= buffer-file-name buffer-auto-save-file-name))
       (or force (recent-auto-save-p))
       («k:progn»
	 («k:condition-case» ()
	     (delete-file buffer-auto-save-file-name)
	   (file-error nil))
	 (set-buffer-auto-saved))))

(«k:defvar» «v:auto-save-hook» nil
  «d:"Normal hook run just before auto-saving."»)

(«k:defcustom» «v:before-save-hook» nil
