	(«k:while» (string-match «s:"[ \t\n;<>&|()`'\"#$]"» pattern beg)
	  (setq pattern
		(concat (substring pattern 0 (match-beginning 0))
			«s:"\\"»
			(substring pattern (match-beginning 0)))
		beg (1+ (match-end 0)))))
      pattern))))


