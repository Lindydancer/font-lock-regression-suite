(«k:defun» «f:insert-file» (filename)
  «d:"Insert contents of file FILENAME into buffer after point.
Set mark after the inserted text.

This function is meant for the user to run interactively.
Don't call it from programs!  Use `«c:insert-file-contents»' instead.
\(Its calling sequence is different; see its documentation)."»
  («k:declare» (interactive-only insert-file-contents))
  (interactive «s:"*fInsert file: "»)
  (insert-file-1 filename #'insert-file-contents))

(«k:defun» «f:append-to-file» (start end filename)
  «d:"Append the contents of the region to the end of file FILENAME.
When called from a function, expects three arguments,
START, END and FILENAME.  START and END are normally buffer positions
specifying the part of the buffer to write.
If START is nil, that means to use the entire buffer contents.
If START is a string, then output that string to the file
instead of any buffer contents; END is ignored.

This does character code conversion and applies annotations
like `«c:write-region»' does."»
  (interactive «s:"r\nFAppend to file: "»)
  («k:prog1» (write-region start end filename t)
    («k:when» save-silently (message nil))))

(«k:defun» «f:file-newest-backup» (filename)
  «d:"Return most recent backup file for FILENAME or nil if no backups exist."»
  «m:;; »«x:`«c:make-backup-file-name»' will get us the right directory for
»  «m:;; »«x:ordinary or numeric backups.  It might create a directory for
»  «m:;; »«x:backups as a side-effect, according to `«c:backup-directory-alist»'.
»  («k:let*» ((filename (file-name-sans-versions
		    (make-backup-file-name (expand-file-name filename))))
	 (file (file-name-nondirectory filename))
	 (dir  (file-name-directory    filename))
	 (comp (file-name-all-completions file dir))
         (newest nil)
         tem)
    («k:while» comp
      (setq tem (pop comp))
      («k:cond» ((and (backup-file-name-p tem)
                  (string= (file-name-sans-versions tem) file))
             (setq tem (concat dir tem))
             («k:if» (or (null newest)
                     (file-newer-than-file-p tem newest))
                 (setq newest tem)))))
    newest))

(«k:defun» «f:rename-uniquely» ()
  «d:"Rename current buffer to a similar name not already taken.
This function is useful for creating multiple shell process buffers
or multiple mail buffers, etc.

Note that some commands, in particular those based on `«c:compilation-mode»'
\(`«c:compile»', `«c:grep»', etc.) will reuse the current buffer if it has the
appropriate mode even if it has been renamed.  So as well as renaming
the buffer, you also need to switch buffers before running another
instance of such commands."»
  (interactive)
  («k:save-match-data»
    («k:let» ((base-name (buffer-name)))
      (and (string-match «s:"<[0-9]+>\\'"» base-name)
	   (not (and buffer-file-name
		     (string= base-name
			      (file-name-nondirectory buffer-file-name))))
	   «m:;; »«x:If the existing buffer name has a <NNN>,
»	   «m:;; »«x:which isn't part of the file name (if any),
»	   «m:;; »«x:then get rid of that.
»	   (setq base-name (substring base-name 0 (match-beginning 0))))
      (rename-buffer (generate-new-buffer-name base-name))
      (force-mode-line-update))))

(«k:defun» «f:make-directory» (dir «t:&optional» parents)
  «d:"Create the directory DIR and optionally any nonexistent parent dirs.
If DIR already exists as a directory, signal an error, unless
PARENTS is non-nil.

Interactively, the default choice of directory to create is the
current buffer's default directory.  That is useful when you have
visited a file in a nonexistent directory.

Noninteractively, the second (optional) argument PARENTS, if
non-nil, says whether to create parent directories that don't
exist.  Interactively, this happens by default.

If creating the directory or directories fail, an error will be
raised."»
  (interactive
   (list (read-file-name «s:"Make directory: "» default-directory default-directory
			 nil nil)
	 t))
  «m:;; »«x:If default-directory is a remote directory,
»  «m:;; »«x:make sure we find its make-directory handler.
»  (setq dir (expand-file-name dir))
  («k:let» ((handler (find-file-name-handler dir 'make-directory)))
    («k:if» handler
	(funcall handler 'make-directory dir parents)
      («k:if» (not parents)
	  (make-directory-internal dir)
	(«k:let» ((dir (directory-file-name (expand-file-name dir)))
	      create-list)
	  («k:while» (and (not (file-exists-p dir))
		      «m:;; »«x:If directory is its own parent, then we can't
»		      «m:;; »«x:keep looping forever
»		      (not (equal dir
				  (directory-file-name
				   (file-name-directory dir)))))
	    (setq create-list (cons dir create-list)
		  dir (directory-file-name (file-name-directory dir))))
	  («k:while» create-list
	    (make-directory-internal (car create-list))
	    (setq create-list (cdr create-list))))))))

(«k:defconst» «v:directory-files-no-dot-files-regexp»
  «s:"^«h:\\»«o:(»[«n:^».]«h:\\»«o:|»\\.«h:\\»«o:(»[«n:^».]«h:\\»«o:|»\\..«h:\\»«o:)»«h:\\»«o:)».*"»
  «d:"Regexp matching any file name except \".\" and \"..\"."»)

(«k:defun» «f:delete-directory» (directory «t:&optional» recursive trash)
  «d:"Delete the directory named DIRECTORY.  Does not follow symlinks.
If RECURSIVE is non-nil, all files in DIRECTORY are deleted as well.
TRASH non-nil means to trash the directory instead, provided
`«c:delete-by-moving-to-trash»' is non-nil.

When called interactively, TRASH is t if no prefix argument is
given.  With a prefix argument, TRASH is nil."»
  (interactive
   («k:let*» ((trashing (and delete-by-moving-to-trash
			 (null current-prefix-arg)))
	  (dir (expand-file-name
		(read-directory-name
		 («k:if» trashing
		     «s:"Move directory to trash: "»
		   «s:"Delete directory: "»)
		 default-directory default-directory nil nil))))
     (list dir
	   («k:if» (directory-files	dir nil directory-files-no-dot-files-regexp)
	       (y-or-n-p
		(format-message «s:"Directory `«c:%s»' is not empty, really %s? "»
                                dir («k:if» trashing «s:"trash"» «s:"delete"»)))
	     nil)
	   (null current-prefix-arg))))
  «m:;; »«x:If default-directory is a remote directory, make sure we find its
»  «m:;; »«x:delete-directory handler.
»  (setq directory (directory-file-name (expand-file-name directory)))
  («k:let» ((handler (find-file-name-handler directory 'delete-directory)))
    («k:cond»
     (handler
      (funcall handler 'delete-directory directory recursive))
     ((and delete-by-moving-to-trash trash)
      «m:;; »«x:Only move non-empty dir to trash if recursive deletion was
»      «m:;; »«x:requested.  This mimics the non-`«c:delete-by-moving-to-trash»'
»      «m:;; »«x:case, where the operation fails in delete-directory-internal.
»      «m:;; »«x:As `«c:move-file-to-trash»' trashes directories (empty or
»      «m:;; »«x:otherwise) as a unit, we do not need to recurse here.
»      («k:if» (and (not recursive)
	       «m:;; »«x:Check if directory is empty apart from "." and "..".
»	       (directory-files
		directory 'full directory-files-no-dot-files-regexp))
	  («w:error» «s:"Directory is not empty, not moving to trash"»)
	(move-file-to-trash directory)))
     «m:;; »«x:Otherwise, call ourselves recursively if needed.
»     (t
      («k:if» (and recursive (not (file-symlink-p directory)))
	  (mapc («k:lambda» (file)
		  «m:;; »«x:This test is equivalent to
»		  «m:;; »«x:(and (file-directory-p fn) (not (file-symlink-p fn)))
»		  «m:;; »«x:but more efficient
»		  («k:if» (eq t (car (file-attributes file)))
		      (delete-directory file recursive nil)
		    (delete-file file nil)))
		«m:;; »«x:We do not want to delete "." and "..".
»		(directory-files
		 directory 'full directory-files-no-dot-files-regexp)))
      (delete-directory-internal directory)))))

(«k:defun» «f:file-equal-p» (file1 file2)
  «d:"Return non-nil if files FILE1 and FILE2 name the same file.
If FILE1 or FILE2 does not exist, the return value is unspecified."»
  («k:let» ((handler (or (find-file-name-handler file1 'file-equal-p)
                     (find-file-name-handler file2 'file-equal-p))))
    («k:if» handler
        (funcall handler 'file-equal-p file1 file2)
      («k:let» (f1-attr f2-attr)
        (and (setq f1-attr (file-attributes (file-truename file1)))
	     (setq f2-attr (file-attributes (file-truename file2)))
	     (equal f1-attr f2-attr))))))

(«k:defun» «f:file-in-directory-p» (file dir)
  «d:"Return non-nil if FILE is in DIR or a subdirectory of DIR.
A directory is considered to be \"in\" itself.
Return nil if DIR is not an existing directory."»
  («k:let» ((handler (or (find-file-name-handler file 'file-in-directory-p)
                     (find-file-name-handler dir  'file-in-directory-p))))
    («k:if» handler
        (funcall handler 'file-in-directory-p file dir)
      («k:when» (file-directory-p dir) «m:; »«x:DIR must exist.
»	(setq file (file-truename file)
	      dir  (file-truename dir))
	(«k:let» ((ls1 (split-string file «s:"/"» t))
	      (ls2 (split-string dir  «s:"/"» t))
	      (root
               («k:cond»
                «m:;; »«x:A UNC on Windows systems, or a "super-root" on Apollo.
»                ((string-match «s:"\\`//"» file) «s:"//"»)
                ((string-match «s:"\\`/"» file) «s:"/"»)
                (t «s:""»)))
	      (mismatch nil))
	  («k:while» (and ls1 ls2 (not mismatch))
	    («k:if» (string-equal (car ls1) (car ls2))
		(setq root (concat root (car ls1) «s:"/"»))
	      (setq mismatch t))
	    (setq ls1 (cdr ls1)
		  ls2 (cdr ls2)))
	  («k:unless» mismatch
	    (file-equal-p root dir)))))))

(«k:defun» «f:copy-directory» (directory newname «t:&optional» keep-time parents copy-contents)
  «d:"Copy DIRECTORY to NEWNAME.  Both args must be strings.
This function always sets the file modes of the output files to match
the corresponding input file.

The third arg KEEP-TIME non-nil means give the output files the same
last-modified time as the old ones.  (This works on only some systems.)

A prefix arg makes KEEP-TIME non-nil.

Noninteractively, the last argument PARENTS says whether to
create parent directories if they don't exist.  Interactively,
this happens by default.

If NEWNAME names an existing directory, copy DIRECTORY as a
subdirectory there.  However, if called from Lisp with a non-nil
optional argument COPY-CONTENTS, copy the contents of DIRECTORY
directly into NEWNAME instead."»
  (interactive
   («k:let» ((dir (read-directory-name
	       «s:"Copy directory: "» default-directory default-directory t nil)))
     (list dir
	   (read-directory-name
	    (format «s:"Copy directory %s to: "» dir)
	    default-directory default-directory nil nil)
	   current-prefix-arg t nil)))
  («k:when» (file-in-directory-p newname directory)
    («w:error» «s:"Cannot copy `«c:%s»' into its subdirectory `«c:%s»'"»
           directory newname))
  «m:;; »«x:If default-directory is a remote directory, make sure we find its
»  «m:;; »«x:copy-directory handler.
»  («k:let» ((handler (or (find-file-name-handler directory 'copy-directory)
		     (find-file-name-handler newname 'copy-directory))))
    («k:if» handler
	(funcall handler 'copy-directory directory
                 newname keep-time parents copy-contents)

      «m:;; »«x:Compute target name.
»      (setq directory (directory-file-name (expand-file-name directory))
	    newname   (directory-file-name (expand-file-name newname)))

      («k:cond» ((not (file-directory-p newname))
	     «m:;; »«x:If NEWNAME is not an existing directory, create it;
»	     «m:;; »«x:that is where we will copy the files of DIRECTORY.
»	     (make-directory newname parents))
	    «m:;; »«x:If NEWNAME is an existing directory and COPY-CONTENTS
»	    «m:;; »«x:is nil, copy into NEWNAME/[DIRECTORY-BASENAME].
»	    ((not copy-contents)
	     (setq newname (expand-file-name
			    (file-name-nondirectory
			     (directory-file-name directory))
			    newname))
	     (and (file-exists-p newname)
		  (not (file-directory-p newname))
		  («w:error» «s:"Cannot overwrite non-directory %s with a directory"»
			 newname))
	     (make-directory newname t)))

      «m:;; »«x:Copy recursively.
»      («k:dolist» (file
	       «m:;; »«x:We do not want to copy "." and "..".
»	       (directory-files directory 'full
				directory-files-no-dot-files-regexp))
	(«k:let» ((target (expand-file-name (file-name-nondirectory file) newname))
	      (filetype (car (file-attributes file))))
	  («k:cond»
	   ((eq filetype t)       «m:; »«x:Directory but not a symlink.
»	    (copy-directory file newname keep-time parents))
	   ((stringp filetype)    «m:; »«x:Symbolic link
»	    (make-symbolic-link filetype target t))
	   ((copy-file file target t keep-time)))))

      «m:;; »«x:Set directory attributes.
»      («k:let» ((modes (file-modes directory))
	    (times (and keep-time (nth 5 (file-attributes directory)))))
	(«k:if» modes (set-file-modes newname modes))
	(«k:if» times (set-file-times newname times))))))


«m:;; »«x:At time of writing, only info uses this.
»(«k:defun» «f:prune-directory-list» (dirs «t:&optional» keep reject)
  «d:"Return a copy of DIRS with all non-existent directories removed.
The optional argument KEEP is a list of directories to retain even if
they don't exist, and REJECT is a list of directories to remove from
DIRS, even if they exist; REJECT takes precedence over KEEP.

Note that membership in REJECT and KEEP is checked using simple string
comparison."»
  (apply #'nconc
	 (mapcar («k:lambda» (dir)
		   (and (not (member dir reject))
			(or (member dir keep) (file-directory-p dir))
			(list dir)))
		 dirs)))


(put 'revert-buffer-function 'permanent-local t)
(«k:defvar» «v:revert-buffer-function» #'revert-buffer--default
  «d:"Function to use to revert this buffer.
The function receives two arguments IGNORE-AUTO and NOCONFIRM,
which are the arguments that `«c:revert-buffer»' received.
It also has access to the `«c:preserve-modes»' argument of `«c:revert-buffer»'
via the `«c:revert-buffer-preserve-modes»' dynamic variable.

For historical reasons, a value of nil means to use the default function.
This should not be relied upon."»)

(put 'revert-buffer-insert-file-contents-function 'permanent-local t)
(«k:defvar» «v:revert-buffer-insert-file-contents-function»
  #'revert-buffer-insert-file-contents--default-function
  «d:"Function to use to insert contents when reverting this buffer.
The function receives two arguments: the first the nominal file name to use;
the second is t if reading the auto-save file.

The function is responsible for updating (or preserving) point.

For historical reasons, a value of nil means to use the default function.
This should not be relied upon."»)

(«k:defun» «f:buffer-stale--default-function» («t:&optional» _noconfirm)
  «d:"Default function to use for `«c:buffer-stale-function»'.
This function ignores its argument.
This returns non-nil if the current buffer is visiting a readable file
whose modification time does not match that of the buffer.

This function only handles buffers that are visiting files.
Non-file buffers need a custom function"»
  (and buffer-file-name
       (file-readable-p buffer-file-name)
       (not (buffer-modified-p (current-buffer)))
       (not (verify-visited-file-modtime (current-buffer)))))

(«k:defvar» «v:buffer-stale-function» #'buffer-stale--default-function
  «d:"Function to check whether a buffer needs reverting.
This should be a function with one optional argument NOCONFIRM.
Auto Revert Mode passes t for NOCONFIRM.  The function should return
non-nil if the buffer should be reverted.  A return value of
`«c:fast»' means that the need for reverting was not checked, but
that reverting the buffer is fast.  The buffer is current when
this function is called.

The idea behind the NOCONFIRM argument is that it should be
non-nil if the buffer is going to be reverted without asking the
user.  In such situations, one has to be careful with potentially
time consuming operations.

For historical reasons, a value of nil means to use the default function.
This should not be relied upon.

For more information on how this variable is used by Auto Revert mode,
see Info node `(emacs)Supporting additional buffers'."»)

(«k:defvar» «v:before-revert-hook» nil
  «d:"Normal hook for `«c:revert-buffer»' to run before reverting.
The function `«c:revert-buffer--default»' runs this.
A customized `«c:revert-buffer-function»' need not run this hook."»)

(«k:defvar» «v:after-revert-hook» nil
  «d:"Normal hook for `«c:revert-buffer»' to run after reverting.
Note that the hook value that it runs is the value that was in effect
before reverting; that makes a difference if you have buffer-local
hook functions.

The function `«c:revert-buffer--default»' runs this.
A customized `«c:revert-buffer-function»' need not run this hook."»)

(«k:defvar» «v:revert-buffer-in-progress-p» nil
  «d:"Non-nil if a `«c:revert-buffer»' operation is in progress, nil otherwise."»)

(«k:defvar» «v:revert-buffer-internal-hook»)

«m:;; »«x:`«c:revert-buffer-function»' was defined long ago to be a function of only
»«m:;; »«x:2 arguments, so we have to use a dynbind variable to pass the
»«m:;; »«x:`«c:preserve-modes»' argument of `«c:revert-buffer»'.
»(«k:defvar» «v:revert-buffer-preserve-modes»)

(«k:defun» «f:revert-buffer» («t:&optional» ignore-auto noconfirm preserve-modes)
  «d:"Replace current buffer text with the text of the visited file on disk.
This undoes all changes since the file was visited or saved.
With a prefix argument, offer to revert from latest auto-save file, if
that is more recent than the visited file.

This command also implements an interface for special buffers
that contain text which doesn't come from a file, but reflects
some other data instead (e.g. Dired buffers, `«c:buffer-list»'
buffers).  This is done via the variable `«c:revert-buffer-function»'.
In these cases, it should reconstruct the buffer contents from the
appropriate data.

When called from Lisp, the first argument is IGNORE-AUTO; only offer
to revert from the auto-save file when this is nil.  Note that the
sense of this argument is the reverse of the prefix argument, for the
sake of backward compatibility.  IGNORE-AUTO is optional, defaulting
to nil.

Optional second argument NOCONFIRM means don't ask for confirmation
at all.  (The variable `«c:revert-without-query»' offers another way to
revert buffers without querying for confirmation.)

Optional third argument PRESERVE-MODES non-nil means don't alter
the files modes.  Normally we reinitialize them using `«c:normal-mode»'.

This function binds `«c:revert-buffer-in-progress-p»' non-nil while it operates.

This function calls the function that `«c:revert-buffer-function»' specifies
to do the work, with arguments IGNORE-AUTO and NOCONFIRM.
The default function runs the hooks `«c:before-revert-hook»' and
`«c:after-revert-hook»'."»
  «m:;; »«x:I admit it's odd to reverse the sense of the prefix argument, but
»  «m:;; »«x:there is a lot of code out there which assumes that the first
»  «m:;; »«x:argument should be t to avoid consulting the auto-save file, and
»  «m:;; »«x:there's no straightforward way to encourage authors to notice a
»  «m:;; »«x:reversal of the argument sense.  So I'm just changing the user
»  «m:;; »«x:interface, but leaving the programmatic interface the same.
»  (interactive (list (not current-prefix-arg)))
  («k:let» ((revert-buffer-in-progress-p t)
        (revert-buffer-preserve-modes preserve-modes))
    (funcall (or revert-buffer-function #'revert-buffer--default)
             ignore-auto noconfirm)))

(«k:defun» «f:revert-buffer--default» (ignore-auto noconfirm)
  «d:"Default function for `«c:revert-buffer»'.
The arguments IGNORE-AUTO and NOCONFIRM are as described for `«c:revert-buffer»'.
Runs the hooks `«c:before-revert-hook»' and `«c:after-revert-hook»' at the
start and end.

Calls `«c:revert-buffer-insert-file-contents-function»' to reread the
contents of the visited file, with two arguments: the first is the file
name, the second is non-nil if reading an auto-save file.

This function only handles buffers that are visiting files.
Non-file buffers need a custom function."»
  («k:with-current-buffer» (or (buffer-base-buffer (current-buffer))
                           (current-buffer))
    («k:let*» ((auto-save-p (and (not ignore-auto)
                             (recent-auto-save-p)
                             buffer-auto-save-file-name
                             (file-readable-p buffer-auto-save-file-name)
                             (y-or-n-p
                              «s:"Buffer has been auto-saved recently.  Revert from auto-save file? "»)))
           (file-name («k:if» auto-save-p
                          buffer-auto-save-file-name
                        buffer-file-name)))
      («k:cond» ((null file-name)
             («w:error» «s:"Buffer does not seem to be associated with any file"»))
            ((or noconfirm
                 (and (not (buffer-modified-p))
                      («k:catch» '«c:found»
                        («k:dolist» (regexp revert-without-query)
                          («k:when» (string-match regexp file-name)
                            («k:throw» '«c:found» t)))))
                 (yes-or-no-p (format «s:"Revert buffer from file %s? "»
                                      file-name)))
             (run-hooks 'before-revert-hook)
             «m:;; »«x:If file was backed up but has changed since,
»             «m:;; »«x:we should make another backup.
»             (and (not auto-save-p)
                  (not (verify-visited-file-modtime (current-buffer)))
                  (setq buffer-backed-up nil))
             «m:;; »«x:Effectively copy the after-revert-hook status,
»             «m:;; »«x:since after-find-file will clobber it.
»             («k:let» ((global-hook (default-value 'after-revert-hook))
                   (local-hook («k:when» (local-variable-p 'after-revert-hook)
                                 after-revert-hook))
                   (inhibit-read-only t))
               «m:;; »«x:FIXME: Throw away undo-log when preserve-modes is nil?
»               (funcall
                (or revert-buffer-insert-file-contents-function
                    #'revert-buffer-insert-file-contents--default-function)
                file-name auto-save-p)
               «m:;; »«x:Recompute the truename in case changes in symlinks
»               «m:;; »«x:have changed the truename.
»               (setq buffer-file-truename
                     (abbreviate-file-name (file-truename buffer-file-name)))
               (after-find-file nil nil t nil revert-buffer-preserve-modes)
               «m:;; »«x:Run after-revert-hook as it was before we reverted.
»               (setq-default revert-buffer-internal-hook global-hook)
               («k:if» local-hook
                   (set (make-local-variable 'revert-buffer-internal-hook)
                        local-hook)
                 (kill-local-variable 'revert-buffer-internal-hook))
               (run-hooks 'revert-buffer-internal-hook))
             t)))))

(«k:defun» «f:revert-buffer-insert-file-contents--default-function» (file-name auto-save-p)
  «d:"Default function for `«c:revert-buffer-insert-file-contents-function»'.
The function `«c:revert-buffer--default»' calls this.
FILE-NAME is the name of the file.  AUTO-SAVE-P is non-nil if this is
an auto-save file."»
  («k:cond»
   ((not (file-exists-p file-name))
    («w:error» («k:if» buffer-file-number
               «s:"File %s no longer exists!"»
             «s:"Cannot revert nonexistent file %s"»)
           file-name))
   ((not (file-readable-p file-name))
    («w:error» («k:if» buffer-file-number
               «s:"File %s no longer readable!"»
             «s:"Cannot revert unreadable file %s"»)
           file-name))
   (t
    «m:;; »«x:Bind buffer-file-name to nil
»    «m:;; »«x:so that we don't try to lock the file.
»    («k:let» ((buffer-file-name nil))
      (or auto-save-p
          (unlock-buffer)))
    (widen)
    («k:let» ((coding-system-for-read
           «m:;; »«x:Auto-saved file should be read by Emacs's
»           «m:;; »«x:internal coding.
»           («k:if» auto-save-p 'auto-save-coding
             (or coding-system-for-read
                 (and
                  buffer-file-coding-system-explicit
                  (car buffer-file-coding-system-explicit))))))
      («k:if» (and (not enable-multibyte-characters)
               coding-system-for-read
               (not (memq (coding-system-base
                           coding-system-for-read)
                          '(no-conversion raw-text))))
          «m:;; »«x:As a coding system suitable for multibyte
»          «m:;; »«x:buffer is specified, make the current
»          «m:;; »«x:buffer multibyte.
»          (set-buffer-multibyte t))

      «m:;; »«x:This force after-insert-file-set-coding
»      «m:;; »«x:(called from insert-file-contents) to set
»      «m:;; »«x:buffer-file-coding-system to a proper value.
»      (kill-local-variable 'buffer-file-coding-system)

      «m:;; »«x:Note that this preserves point in an intelligent way.
»      («k:if» revert-buffer-preserve-modes
          («k:let» ((buffer-file-format buffer-file-format))
            (insert-file-contents file-name (not auto-save-p)
                                  nil nil t))
        (insert-file-contents file-name (not auto-save-p)
                              nil nil t))))))

(«k:defun» «f:recover-this-file» ()
  «d:"Recover the visited file--get contents from its last auto-save file."»
  (interactive)
  (recover-file buffer-file-name))

(«k:defun» «f:recover-file» (file)
  «d:"Visit file FILE, but get contents from its last auto-save file."»
  «m:;; »«x:Actually putting the file name in the minibuffer should be used
»  «m:;; »«x:only rarely.
»  «m:;; »«x:Not just because users often use the default.
»  (interactive «s:"FRecover file: "»)
  (setq file (expand-file-name file))
  («k:if» (auto-save-file-name-p (file-name-nondirectory file))
      («w:error» «s:"%s is an auto-save file"» (abbreviate-file-name file)))
  («k:let» ((file-name («k:let» ((buffer-file-name file))
		     (make-auto-save-file-name))))
    («k:cond» ((«k:if» (file-exists-p file)
	       (not (file-newer-than-file-p file-name file))
	     (not (file-exists-p file-name)))
	   («w:error» «s:"Auto-save file %s not current"»
		  (abbreviate-file-name file-name)))
	  ((with-temp-buffer-window
	    «s:"*Directory*"» nil
	    #'(«k:lambda» (window _value)
		(«k:with-selected-window» window
		  («k:unwind-protect»
		      (yes-or-no-p (format «s:"Recover auto save file %s? "» file-name))
		    («k:when» (window-live-p window)
		      (quit-restore-window window 'kill)))))
	    («k:with-current-buffer» standard-output
	      («k:let» ((switches dired-listing-switches))
		(«k:if» (file-symlink-p file)
		    (setq switches (concat switches «s:" -L"»)))
		«m:;; »«x:Use insert-directory-safely, not insert-directory,
»		«m:;; »«x:because these files might not exist.  In particular,
»		«m:;; »«x:FILE might not exist if the auto-save file was for
»		«m:;; »«x:a buffer that didn't visit a file, such as "*mail*".
»		«m:;; »«x:The code in v20.x called `«c:ls»' directly, so we need
»		«m:;; »«x:to emulate what `«c:ls»' did in that case.
»		(insert-directory-safely file switches)
		(insert-directory-safely file-name switches))))
	   (switch-to-buffer (find-file-noselect file t))
	   («k:let» ((inhibit-read-only t)
		 «m:;; »«x:Keep the current buffer-file-coding-system.
»		 (coding-system buffer-file-coding-system)
		 «m:;; »«x:Auto-saved file should be read with special coding.
»		 (coding-system-for-read 'auto-save-coding))
	     (erase-buffer)
	     (insert-file-contents file-name nil)
	     (set-buffer-file-coding-system coding-system))
	   (after-find-file nil nil t))
	  (t (user-error «s:"Recover-file canceled"»)))))

(«k:defun» «f:recover-session» ()
  «d:"Recover auto save files from a previous Emacs session.
This command first displays a Dired buffer showing you the
previous sessions that you could recover from.
To choose one, move point to the proper line and then type C-c C-c.
Then you'll be asked about a number of files to recover."»
  (interactive)
  («k:if» (null auto-save-list-file-prefix)
      («w:error» «s:"You set `«c:auto-save-list-file-prefix»' to disable making session files"»))
  («k:let» ((dir (file-name-directory auto-save-list-file-prefix))
        (nd (file-name-nondirectory auto-save-list-file-prefix)))
    («k:unless» (file-directory-p dir)
      (make-directory dir t))
    («k:unless» (directory-files dir nil
                             («k:if» (string= «s:""» nd)
                                 directory-files-no-dot-files-regexp
                               (concat «s:"\\`"» (regexp-quote nd)))
			     t)
      («w:error» «s:"No previous sessions to recover"»)))
  («k:let» ((ls-lisp-support-shell-wildcards t))
    (dired (concat auto-save-list-file-prefix «s:"*"»)
	   (concat dired-listing-switches «s:" -t"»)))
  (use-local-map (nconc (make-sparse-keymap) (current-local-map)))
  (define-key (current-local-map) «s:"\C-c\C-c"» 'recover-session-finish)
  («k:save-excursion»
    (goto-char (point-min))
    (or (looking-at «s:" Move to the session you want to recover,"»)
	(«k:let» ((inhibit-read-only t))
	  «m:;; »«x:Each line starts with a space
»	  «m:;; »«x:so that Font Lock mode won't highlight the first character.
»	  (insert «s:" To recover a session, move to it and type C-c C-c.\n"»
		  (substitute-command-keys
		   «s:" To delete a session file, type \
\\[«c:dired-flag-file-deletion»] on its line to flag
 the file for deletion, then \\[«c:dired-do-flagged-delete»] to \
delete flagged files.\n\n"»))))))

(«k:defun» «f:recover-session-finish» ()
  «d:"Choose one saved session to recover auto-save files from.
This command is used in the special Dired buffer created by
\\[«c:recover-session»]."»
  (interactive)
  «m:;; »«x:Get the name of the session file to recover from.
»  («k:let» ((file (dired-get-filename))
	files
	(buffer (get-buffer-create «s:" *recover*"»)))
    (dired-unmark 1)
    (dired-do-flagged-delete t)
    («k:unwind-protect»
	(«k:with-current-buffer» buffer
	  «m:;; »«x:Read in the auto-save-list file.
»	  (erase-buffer)
	  (insert-file-contents file)
	  «m:;; »«x:Loop thru the text of that file
»	  «m:;; »«x:and get out the names of the files to recover.
»	  («k:while» (not (eobp))
	    («k:let» (thisfile autofile)
	      («k:if» (eolp)
		  «m:;; »«x:This is a pair of lines for a non-file-visiting buffer.
»		  «m:;; »«x:Get the auto-save file name and manufacture
»		  «m:;; »«x:a "visited file name" from that.
»		  («k:progn»
		    (forward-line 1)
		    «m:;; »«x:If there is no auto-save file name, the
»		    «m:;; »«x:auto-save-list file is probably corrupted.
»		    («k:unless» (eolp)
		      (setq autofile
			    (buffer-substring-no-properties
			     (point)
			     (line-end-position)))
		      (setq thisfile
			    (expand-file-name
			     (substring
			      (file-name-nondirectory autofile)
			      1 -1)
			     (file-name-directory autofile))))
		    (forward-line 1))
		«m:;; »«x:This pair of lines is a file-visiting
»		«m:;; »«x:buffer.  Use the visited file name.
»		(«k:progn»
		  (setq thisfile
			(buffer-substring-no-properties
			 (point) («k:progn» (end-of-line) (point))))
		  (forward-line 1)
		  (setq autofile
			(buffer-substring-no-properties
			 (point) («k:progn» (end-of-line) (point))))
		  (forward-line 1)))
	      «m:;; »«x:Ignore a file if its auto-save file does not exist now.
»	      («k:if» (and autofile (file-exists-p autofile))
		  (setq files (cons thisfile files)))))
	  (setq files (nreverse files))
	  «m:;; »«x:The file contains a pair of line for each auto-saved buffer.
»	  «m:;; »«x:The first line of the pair contains the visited file name
»	  «m:;; »«x:or is empty if the buffer was not visiting a file.
»	  «m:;; »«x:The second line is the auto-save file name.
»	  («k:if» files
	      (map-y-or-n-p  «s:"Recover %s? "»
			     («k:lambda» (file)
			       («k:condition-case» nil
				   («k:save-excursion» (recover-file file))
				 («w:error»
				  «s:"Failed to recover `«c:%s»'"» file)))
			     files
			     '(«s:"file"» «s:"files"» «s:"recover"»))
	    (message «s:"No files can be recovered from this session now"»)))
      (kill-buffer buffer))))

(«k:defun» «f:kill-buffer-ask» (buffer)
  «d:"Kill BUFFER if confirmed."»
  («k:when» (yes-or-no-p (format «s:"Buffer %s %s.  Kill? "»
			     (buffer-name buffer)
			     («k:if» (buffer-modified-p buffer)
				 «s:"HAS BEEN EDITED"» «s:"is unmodified"»)))
    (kill-buffer buffer)))

(«k:defun» «f:kill-some-buffers» («t:&optional» list)
  «d:"Kill some buffers.  Asks the user whether to kill each one of them.
Non-interactively, if optional argument LIST is non-nil, it
specifies the list of buffers to kill, asking for approval for each one."»
  (interactive)
  («k:if» (null list)
      (setq list (buffer-list)))
  («k:while» list
    («k:let*» ((buffer (car list))
	   (name (buffer-name buffer)))
      (and name				«m:; »«x:Can be nil for an indirect buffer
»					«m:; »«x:if we killed the base buffer.
»	   (not (string-equal name «s:""»))
	   (/= (aref name 0) ?\s)
	   (kill-buffer-ask buffer)))
    (setq list (cdr list))))

(«k:defun» «f:kill-matching-buffers» (regexp «t:&optional» internal-too)
  «d:"Kill buffers whose name matches the specified REGEXP.
The optional second argument indicates whether to kill internal buffers too."»
  (interactive «s:"sKill buffers matching this regular expression: \nP"»)
  («k:dolist» (buffer (buffer-list))
    («k:let» ((name (buffer-name buffer)))
      («k:when» (and name (not (string-equal name «s:""»))
                 (or internal-too (/= (aref name 0) ?\s))
                 (string-match regexp name))
        (kill-buffer-ask buffer)))))


(«k:defun» «f:rename-auto-save-file» ()
  «d:"Adjust current buffer's auto save file name for current conditions.
Also rename any existing auto save file, if it was made in this session."»
  («k:let» ((osave buffer-auto-save-file-name))
    (setq buffer-auto-save-file-name
	  (make-auto-save-file-name))
    («k:if» (and osave buffer-auto-save-file-name
	     (not (string= buffer-auto-save-file-name buffer-file-name))
	     (not (string= buffer-auto-save-file-name osave))
	     (file-exists-p osave)
	     (recent-auto-save-p))
	(rename-file osave buffer-auto-save-file-name t))))

(«k:defun» «f:make-auto-save-file-name» ()
  «d:"Return file name to use for auto-saves of current buffer.
Does not consider `«c:auto-save-visited-file-name»' as that variable is checked
before calling this function.  You can redefine this for customization.
See also `«c:auto-save-file-name-p»'."»
  («k:if» buffer-file-name
      («k:let» ((handler (find-file-name-handler buffer-file-name
					     'make-auto-save-file-name)))
	(«k:if» handler
	    (funcall handler 'make-auto-save-file-name)
	  («k:let» ((list auto-save-file-name-transforms)
		(filename buffer-file-name)
		result uniq)
	    «m:;; »«x:Apply user-specified translations
»	    «m:;; »«x:to the file name.
»	    («k:while» (and list (not result))
	      («k:if» (string-match (car (car list)) filename)
		  (setq result (replace-match (cadr (car list)) t nil
					      filename)
			uniq (car (cddr (car list)))))
	      (setq list (cdr list)))
	    («k:if» result
		(«k:if» uniq
		    (setq filename (concat
				    (file-name-directory result)
				    (subst-char-in-string
				     ?/ ?!
				     (replace-regexp-in-string «s:"!"» «s:"!!"»
							       filename))))
		  (setq filename result)))
	    (setq result
		  («k:if» (and (eq system-type 'ms-dos)
			   (not (msdos-long-file-names)))
		      «m:;; »«x:We truncate the file name to DOS 8+3 limits
»		      «m:;; »«x:before doing anything else, because the regexp
»		      «m:;; »«x:passed to string-match below cannot handle
»		      «m:;; »«x:extensions longer than 3 characters, multiple
»		      «m:;; »«x:dots, and other atrocities.
»		      («k:let» ((fn (dos-8+3-filename
				 (file-name-nondirectory buffer-file-name))))
			(string-match
			 «s:"\\`«h:\\»«o:(»[«n:^».]+«h:\\»«o:)»«h:\\»«o:(»\\.«h:\\»«o:(»..?«h:\\»«o:)»?.?«h:\\»«o:|»«h:\\»«o:)»\\'"»
			 fn)
			(concat (file-name-directory buffer-file-name)
				«s:"#"» (match-string 1 fn)
				«s:"."» (match-string 3 fn) «s:"#"»))
		    (concat (file-name-directory filename)
			    «s:"#"»
			    (file-name-nondirectory filename)
			    «s:"#"»)))
	    «m:;; »«x:Make sure auto-save file names don't contain characters
»	    «m:;; »«x:invalid for the underlying filesystem.
»	    («k:if» (and (memq system-type '(ms-dos windows-nt cygwin))
		     «m:;; »«x:Don't modify remote (ange-ftp) filenames
»		     (not (string-match «s:"^/\\w+@[-A-Za-z0-9._]+:"» result)))
		(convert-standard-filename result)
	      result))))

    «m:;; »«x:Deal with buffers that don't have any associated files.  (Mail
»    «m:;; »«x:mode tends to create a good number of these.)
»
    («k:let» ((buffer-name (buffer-name))
	  (limit 0)
	  file-name)
      «m:;; »«x:Restrict the characters used in the file name to those which
»      «m:;; »«x:are known to be safe on all filesystems, url-encoding the
»      «m:;; »«x:rest.
»      «m:;; »«x:We do this on all platforms, because even if we are not
»      «m:;; »«x:running on DOS/Windows, the current directory may be on a
»      «m:;; »«x:mounted VFAT filesystem, such as a USB memory stick.
»      («k:while» (string-match «s:"[«n:^»A-Za-z0-9-_.~#+]"» buffer-name limit)
	(«k:let*» ((character (aref buffer-name (match-beginning 0)))
	       (replacement
                «m:;; »«x:For multibyte characters, this will produce more than
»                «m:;; »«x:2 hex digits, so is not true URL encoding.
»                (format «s:"%%%02X"» character)))
	  (setq buffer-name (replace-match replacement t t buffer-name))
	  (setq limit (1+ (match-end 0)))))
      «m:;; »«x:Generate the file name.
»      (setq file-name
	    (make-temp-file
	     («k:let» ((fname
		    (expand-file-name
		     (format «s:"#%s#"» buffer-name)
		     «m:;; »«x:Try a few alternative directories, to get one we can
»		     «m:;; »«x:write it.
»		     («k:cond»
		      ((file-writable-p default-directory) default-directory)
		      ((file-writable-p «s:"/var/tmp/"») «s:"/var/tmp/"»)
		      («s:"~/"»)))))
	       («k:if» (and (memq system-type '(ms-dos windows-nt cygwin))
			«m:;; »«x:Don't modify remote (ange-ftp) filenames
»			(not (string-match «s:"^/\\w+@[-A-Za-z0-9._]+:"» fname)))
		   «m:;; »«x:The call to convert-standard-filename is in case
»		   «m:;; »«x:buffer-name includes characters not allowed by the
»		   «m:;; »«x:DOS/Windows filesystems.  make-temp-file writes to the
»		   «m:;; »«x:file it creates, so we must fix the file name _before_
»		   «m:;; »«x:make-temp-file is called.
»		   (convert-standard-filename fname)
		 fname))
	     nil «s:"#"»))
      «m:;; »«x:make-temp-file creates the file,
»      «m:;; »«x:but we don't want it to exist until we do an auto-save.
»      («k:condition-case» ()
	  (delete-file file-name)
	(file-error nil))
      file-name)))

(«k:defun» «f:auto-save-file-name-p» (filename)
  «d:"Return non-nil if FILENAME can be yielded by `«c:make-auto-save-file-name»'.
FILENAME should lack slashes.  You can redefine this for customization."»
  (string-match «s:"\\`#.*#\\'"» filename))

(«k:defun» «f:wildcard-to-regexp» (wildcard)
  «d:"Given a shell file name pattern WILDCARD, return an equivalent regexp.
The generated regexp will match a filename only if the filename
matches that wildcard according to shell rules.  Only wildcards known
by `«c:sh»' are supported."»
  («k:let*» ((i (string-match «s:"[[.*+\\^$?]"» wildcard))
	 «m:;; »«x:Copy the initial run of non-special characters.
»	 (result (substring wildcard 0 i))
	 (len (length wildcard)))
    «m:;; »«x:If no special characters, we're almost done.
»    («k:if» i
	(«k:while» (< i len)
	  («k:let» ((ch (aref wildcard i))
		j)
	    (setq
	     result
	     (concat result
		     («k:cond»
		      ((and (eq ch ?\[)
			    (< (1+ i) len)
			    (eq (aref wildcard (1+ i)) ?\]))
		       «s:"\\["»)
		      ((eq ch ?\[)	«m:; »«x:[...] maps to regexp char class
»		       («k:progn»
			 (setq i (1+ i))
			 (concat
			  («k:cond»
			   ((eq (aref wildcard i) ?!) «m:; »«x:[!...] -> [«n:^»...]
»			    («k:progn»
			      (setq i (1+ i))
			      («k:if» (eq (aref wildcard i) ?\])
				  («k:progn»
				    (setq i (1+ i))
				    «s:"[«n:^»]"»)
				«s:"[«n:^»"»)))
			   ((eq (aref wildcard i) ?^)
			    «m:;; »«x:Found "[«n:^»".  Insert a `\0' character
»			    «m:;; »«x:(which cannot happen in a filename)
»			    «m:;; »«x:into the character class, so that `^'
»			    «m:;; »«x:is not the first character after `[',
»			    «m:;; »«x:and thus non-special in a regexp.
»			    («k:progn»
			      (setq i (1+ i))
			      «s:"[\000^"»))
			   ((eq (aref wildcard i) ?\])
			    «m:;; »«x:I don't think `]' can appear in a
»			    «m:;; »«x:character class in a wildcard, but
»			    «m:;; »«x:let's be general here.
»			    («k:progn»
			      (setq i (1+ i))
			      «s:"[]"»))
			   (t «s:"["»))
			  («k:prog1»	«m:; »«x:copy everything upto next `]'.
»			      (substring wildcard
					 i
					 (setq j (string-match
						  «s:"]"» wildcard i)))
			    (setq i («k:if» j (1- j) (1- len)))))))
		      ((eq ch ?.)  «s:"\\."»)
		      ((eq ch ?*)  «s:"[«n:^»\000]*"»)
		      ((eq ch ?+)  «s:"\\+"»)
		      ((eq ch ?^)  «s:"\\^"»)
		      ((eq ch ?$)  «s:"\\$"»)
		      ((eq ch ?\\) «s:"\\\\"») «m:; »«x:probably cannot happen...
»		      ((eq ch ??)  «s:"[«n:^»\000]"»)
		      (t (char-to-string ch)))))
	    (setq i (1+ i)))))
    «m:;; »«x:Shell wildcards should match the entire filename,
»    «m:;; »«x:not its part.  Make the regexp say so.
»    (concat «s:"\\`"» result «s:"\\'"»)))

