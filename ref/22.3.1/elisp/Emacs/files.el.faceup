(«k:defun» «f:find-file-existing» (filename)
   «d:"Edit the existing file FILENAME.
Like \\[«c:find-file»], but only allow a file that exists, and do not allow
file names with wildcards."»
   (interactive (nbutlast (find-file-read-args «s:"Find existing file: "» t)))
   («k:if» (and (not (called-interactively-p 'interactive))
	    (not (file-exists-p filename)))
       («w:error» «s:"%s does not exist"» filename)
     (find-file filename)
     (current-buffer)))

(«k:defun» «f:find-file--read-only» (fun filename wildcards)
  («k:unless» (or (and wildcards find-file-wildcards
		   (not (string-match «s:"\\`/:"» filename))
		   (string-match «s:"[[*?]"» filename))
	      (file-exists-p filename))
    («w:error» «s:"%s does not exist"» filename))
  («k:let» ((value (funcall fun filename wildcards)))
    (mapc («k:lambda» (b) («k:with-current-buffer» b (read-only-mode 1)))
	  («k:if» (listp value) value (list value)))
    value))

(«k:defun» «f:find-file-read-only» (filename «t:&optional» wildcards)
  «d:"Edit file FILENAME but don't allow changes.
Like \\[«c:find-file»], but marks buffer as read-only.
Use \\[«c:read-only-mode»] to permit editing."»
  (interactive
   (find-file-read-args «s:"Find file read-only: "»
                        (confirm-nonexistent-file-or-buffer)))
  (find-file--read-only #'find-file filename wildcards))

(«k:defun» «f:find-file-read-only-other-window» (filename «t:&optional» wildcards)
  «d:"Edit file FILENAME in another window but don't allow changes.
Like \\[«c:find-file-other-window»], but marks buffer as read-only.
Use \\[«c:read-only-mode»] to permit editing."»
