       (char-equal (aref name (1- (length name))) ?/)))

(«k:defun» «f:directory-files-recursively» (dir match «t:&optional» include-directories)
  «d:"Return all files under DIR that have file names matching MATCH (a regexp).
This function works recursively.  Files are returned in \"depth first\"
and alphabetical order.
If INCLUDE-DIRECTORIES, also include directories that have matching names."»
  («k:let» ((result nil)
	(files nil)
	«m:;; »«x:When DIR is "/", remote file names like "/method:" could
»	«m:;; »«x:also be offered.  We shall suppress them.
»	(tramp-mode (and tramp-mode (file-remote-p dir))))
    («k:dolist» (file (sort (file-name-all-completions «s:""» dir)
			'string<))
      («k:unless» (member file '(«s:"./"» «s:"../"»))
	(«k:if» (directory-name-p file)
	    («k:let*» ((leaf (substring file 0 (1- (length file))))
		   (full-file (expand-file-name leaf dir)))
	      «m:;; »«x:Don't follow symlinks to other directories.
»	      («k:unless» (file-symlink-p full-file)
		(setq result
		      (nconc result (directory-files-recursively
				     full-file match include-directories))))
	      («k:when» (and include-directories
			 (string-match match leaf))
		(setq result (nconc result (list full-file)))))
	  («k:when» (string-match match file)
	    (push (expand-file-name file dir) files)))))
    (nconc result (nreverse files))))

(«k:defun» «f:load-file» (file)
  «d:"Load the Lisp file named FILE."»
  «m:;; »«x:This is a case where .elc makes a lot of sense.
»  (interactive (list («k:let» ((completion-ignored-extensions
			    (remove «s:".elc"» completion-ignored-extensions)))
		       (read-file-name «s:"Load file: "» nil nil 'lambda))))
  (load (expand-file-name file) nil nil t))

(«k:defun» «f:locate-file» (filename path «t:&optional» suffixes predicate)
  «d:"Search for FILENAME through PATH.
If found, return the absolute file name of FILENAME; otherwise
return nil.
PATH should be a list of directories to look in, like the lists in
`«c:exec-path»' or `«c:load-path»'.
If SUFFIXES is non-nil, it should be a list of suffixes to append to
file name when searching.  If SUFFIXES is nil, it is equivalent to '(\"\").
Use '(\"/\") to disable PATH search, but still try the suffixes in SUFFIXES.
If non-nil, PREDICATE is used instead of `«c:file-readable-p»'.

This function will normally skip directories, so if you want it to find
directories, make sure the PREDICATE function returns `«c:dir-ok»' for them.

PREDICATE can also be an integer to pass to the `«c:access»' system call,
in which case file-name handlers are ignored.  This usage is deprecated.
For compatibility, PREDICATE can also be one of the symbols
`«c:executable»', `«c:readable»', `«c:writable»', or `«c:exists»', or a list of
one or more of those symbols."»
  («k:if» (and predicate (symbolp predicate) (not (functionp predicate)))
      (setq predicate (list predicate)))
  («k:when» (and (consp predicate) (not (functionp predicate)))
    (setq predicate
	  (logior («k:if» (memq 'executable predicate) 1 0)
		  («k:if» (memq 'writable predicate) 2 0)
		  («k:if» (memq 'readable predicate) 4 0))))
  (locate-file-internal filename path suffixes predicate))

(«k:defun» «f:locate-file-completion-table» (dirs suffixes string pred action)
  «d:"Do completion for file names passed to `«c:locate-file»'."»
  («k:cond»
   ((file-name-absolute-p string)
    «m:;; »«x:FIXME: maybe we should use completion-file-name-table instead,
»    «m:;; »«x:tho at least for `«c:load»', the arg is passed through
»    «m:;; »«x:substitute-in-file-name for historical reasons.
»    (read-file-name-internal string pred action))
   ((eq (car-safe action) 'boundaries)
    («k:let» ((suffix (cdr action)))
      `(boundaries
        ,(length (file-name-directory string))
        ,@(«k:let» ((x (file-name-directory suffix)))
            («k:if» x (1- (length x)) (length suffix))))))
   (t
    («k:let» ((names '())
          «m:;; »«x:If we have files like "foo.el" and "foo.elc", we could load one of
»          «m:;; »«x:them with "foo.el", "foo.elc", or "foo", where just "foo" is the
»          «m:;; »«x:preferred way.  So if we list all 3, that gives a lot of redundant
»          «m:;; »«x:entries for the poor soul looking just for "foo".  OTOH, sometimes
»          «m:;; »«x:the user does want to pay attention to the extension.  We try to
»          «m:;; »«x:diffuse this tension by stripping the suffix, except when the
»          «m:;; »«x:result is a single element (i.e. usually we only list "foo" unless
»          «m:;; »«x:it's the only remaining element in the list, in which case we do
»          «m:;; »«x:list "foo", "foo.elc" and "foo.el").
»          (fullnames '())
	  (suffix (concat (regexp-opt suffixes t) «s:"\\'"»))
	  (string-dir (file-name-directory string))
          (string-file (file-name-nondirectory string)))
      («k:dolist» (dir dirs)
        («k:unless» dir
          (setq dir default-directory))
        («k:if» string-dir (setq dir (expand-file-name string-dir dir)))
        («k:when» (file-directory-p dir)
          («k:dolist» (file (file-name-all-completions
                         string-file dir))
            («k:if» (not (string-match suffix file))
                (push file names)
              (push file fullnames)
              (push (substring file 0 (match-beginning 0)) names)))))
      «m:;; »«x:Switching from names to names+fullnames creates a non-monotonicity
»      «m:;; »«x:which can cause problems with things like partial-completion.
»      «m:;; »«x:To minimize the problem, filter out completion-regexp-list, so that
»      «m:;; »«x:M-x load-library RET t/x.e TAB finds some files.  Also remove elements
»      «m:;; »«x:from `«c:names»' which only matched `«c:string»' when they still had
»      «m:;; »«x:their suffix.
»      (setq names (all-completions string names))
      «m:;; »«x:Remove duplicates of the first element, so that we can easily check
»      «m:;; »«x:if `«c:names»' really only contains a single element.
»      («k:when» (cdr names) (setcdr names (delete (car names) (cdr names))))
      («k:unless» (cdr names)
        «m:;; »«x:There's no more than one matching non-suffixed element, so expand
»        «m:;; »«x:the list by adding the suffixed elements as well.
»        (setq names (nconc names fullnames)))
      (completion-table-with-context
       string-dir names string-file pred action)))))

(«k:defun» «f:locate-file-completion» (string path-and-suffixes action)
  «d:"Do completion for file names passed to `«c:locate-file»'.
PATH-AND-SUFFIXES is a pair of lists, (DIRECTORIES . SUFFIXES)."»
  («k:declare» (obsolete locate-file-completion-table «s:"23.1"»))
  (locate-file-completion-table (car path-and-suffixes)
                                (cdr path-and-suffixes)
