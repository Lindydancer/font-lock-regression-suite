(«k:defun» «f:basic-save-buffer» («t:&optional» called-interactively)
  «d:"Save the current buffer in its visited file, if it has been modified.
The hooks `«c:write-contents-functions»' and `«c:write-file-functions»' get a chance
to do the job of saving; if they do not, then the buffer is saved in
the visited file in the usual way.
Before and after saving the buffer, this function runs
`«c:before-save-hook»' and `«c:after-save-hook»', respectively."»
  (interactive '(called-interactively))
  («k:save-current-buffer»
    «m:;; »«x:In an indirect buffer, save its base buffer instead.
»    («k:if» (buffer-base-buffer)
	(set-buffer (buffer-base-buffer)))
    («k:if» (or (buffer-modified-p)
	    «m:;; »«x:handle the case when no modification has been made but
»	    «m:;; »«x:the file disappeared since visited
»	    (and buffer-file-name
		 (not (file-exists-p buffer-file-name))))
	(«k:let» ((recent-save (recent-auto-save-p))
	      setmodes)
          «m:;; »«x:If buffer has no file name, ask user for one.
»	  (or buffer-file-name
              («k:let» ((filename
                     (expand-file-name
                      (read-file-name «s:"File to save in: "»
                                      nil (expand-file-name (buffer-name))))))
                («k:if» (file-exists-p filename)
                    («k:if» (file-directory-p filename)
                        «m:;; »«x:Signal an error if the user specified the name of an
»                        «m:;; »«x:existing directory.
»                        («w:error» «s:"%s is a directory"» filename)
                      («k:unless» (y-or-n-p (format-message
                                         «s:"File `«c:%s»' exists; overwrite? "»
                                         filename))
                        («w:error» «s:"Canceled"»))))
                (set-visited-file-name filename)))
	  (or (verify-visited-file-modtime (current-buffer))
	      (not (file-exists-p buffer-file-name))
	      (yes-or-no-p
	       (format
		«s:"%s has changed since visited or saved.  Save anyway? "»
		(file-name-nondirectory buffer-file-name)))
	      (user-error «s:"Save not confirmed"»))
	  («k:save-restriction»
	    (widen)
	    («k:save-excursion»
	      (and (> (point-max) (point-min))
		   (not find-file-literally)
		   (/= (char-after (1- (point-max))) ?\n)
		   (not (and (eq selective-display t)
			     (= (char-after (1- (point-max))) ?\r)))
		   (or (eq require-final-newline t)
		       (eq require-final-newline 'visit-save)
		       (and require-final-newline
			    (y-or-n-p
			     (format «s:"Buffer %s does not end in newline.  Add one? "»
				     (buffer-name)))))
		   («k:save-excursion»
		     (goto-char (point-max))
		     (insert ?\n))))
	    «m:;; »«x:Support VC version backups.
»	    (vc-before-save)
	    «m:;; »«x:Don't let errors prevent saving the buffer.
»	    (with-demoted-errors (run-hooks 'before-save-hook))
	    (or (run-hook-with-args-until-success 'write-contents-functions)
		(run-hook-with-args-until-success 'local-write-file-hooks)
		(run-hook-with-args-until-success 'write-file-functions)
		«m:;; »«x:If a hook returned t, file is already "written".
»		«m:;; »«x:Otherwise, write it the usual way now.
»		(«k:let» ((dir (file-name-directory
			    (expand-file-name buffer-file-name))))
		  («k:unless» (file-exists-p dir)
		    («k:if» (y-or-n-p
			 (format-message
                          «s:"Directory `«c:%s»' does not exist; create? "» dir))
			(make-directory dir t)
		      («w:error» «s:"Canceled"»)))
		  (setq setmodes (basic-save-buffer-1))))
	    «m:;; »«x:Now we have saved the current buffer.  Let's make sure
»	    «m:;; »«x:that buffer-file-coding-system is fixed to what
»	    «m:;; »«x:actually used for saving by binding it locally.
»	    («k:if» save-buffer-coding-system
		(setq save-buffer-coding-system last-coding-system-used)
	      (setq buffer-file-coding-system last-coding-system-used))
	    (setq buffer-file-number
		  (nthcdr 10 (file-attributes buffer-file-name)))
	    («k:if» setmodes
		(«k:condition-case» ()
		    («k:progn»
		      («k:unless»
			  (with-demoted-errors
			    (set-file-modes buffer-file-name (car setmodes)))
			(set-file-extended-attributes buffer-file-name
						      (nth 1 setmodes))))
		  («w:error» nil))))
	  «m:;; »«x:If the auto-save file was recent before this command,
»	  «m:;; »«x:delete it now.
»	  (delete-auto-save-file-if-necessary recent-save)
	  «m:;; »«x:Support VC `«c:implicit»' locking.
»	  (vc-after-save)
	  (run-hooks 'after-save-hook))
      (or noninteractive
          (not called-interactively)
          (files--message «s:"(No changes need to be saved)"»)))))

«m:;; »«x:This does the "real job" of writing a buffer into its visited file
»«m:;; »«x:and making a backup file.  This is what is normally done
»«m:;; »«x:but inhibited if one of write-file-functions returns non-nil.
»«m:;; »«x:It returns a value (MODES EXTENDED-ATTRIBUTES BACKUPNAME), like
»«m:;; »«x:backup-buffer.
»(«k:defun» «f:basic-save-buffer-1» ()
  («k:prog1»
      («k:if» save-buffer-coding-system
	  («k:let» ((coding-system-for-write save-buffer-coding-system))
	    (basic-save-buffer-2))
	(basic-save-buffer-2))
    («k:if» buffer-file-coding-system-explicit
	(setcar buffer-file-coding-system-explicit last-coding-system-used))))

«m:;; »«x:This returns a value (MODES EXTENDED-ATTRIBUTES BACKUPNAME), like
»«m:;; »«x:backup-buffer.
»(«k:defun» «f:basic-save-buffer-2» ()
  («k:let» (tempsetmodes setmodes)
    («k:if» (not (file-writable-p buffer-file-name))
	(«k:let» ((dir (file-name-directory buffer-file-name)))
	  («k:if» (not (file-directory-p dir))
	      («k:if» (file-exists-p dir)
		  («w:error» «s:"%s is not a directory"» dir)
		(«w:error» «s:"%s: no such directory"» dir))
	    («k:if» (not (file-exists-p buffer-file-name))
		(«w:error» «s:"Directory %s write-protected"» dir)
	      («k:if» (yes-or-no-p
		   (format
		    «s:"File %s is write-protected; try to save anyway? "»
		    (file-name-nondirectory
		     buffer-file-name)))
		  (setq tempsetmodes t)
		(«w:error» «s:"Attempt to save to a file which you aren't allowed to write"»))))))
    (or buffer-backed-up
	(setq setmodes (backup-buffer)))
    («k:let*» ((dir (file-name-directory buffer-file-name))
           (dir-writable (file-writable-p dir)))
      («k:if» (or (and file-precious-flag dir-writable)
              (and break-hardlink-on-save
                   (file-exists-p buffer-file-name)
                   (> (file-nlinks buffer-file-name) 1)
                   (or dir-writable
                       («w:error» (concat «s:"Directory %s write-protected; "»
                                      «s:"cannot break hardlink when saving"»)
                              dir))))
	  «m:;; »«x:Write temp name, then rename it.
»	  «m:;; »«x:This requires write access to the containing dir,
»	  «m:;; »«x:which is why we don't try it if we don't have that access.
»	  («k:let» ((realname buffer-file-name)
		tempname succeed
		(umask (default-file-modes))
		(old-modtime (visited-file-modtime)))
	    «m:;; »«x:Create temp files with strict access rights.  It's easy to
»	    «m:;; »«x:loosen them later, whereas it's impossible to close the
»	    «m:;; »«x:time-window of loose permissions otherwise.
»	    («k:unwind-protect»
		(«k:progn»
		  (clear-visited-file-modtime)
		  (set-default-file-modes ?\700)
		  «m:;; »«x:Try various temporary names.
»		  «m:;; »«x:This code follows the example of make-temp-file,
»		  «m:;; »«x:but it calls write-region in the appropriate way
»		  «m:;; »«x:for saving the buffer.
»		  («k:while» («k:condition-case» ()
			     («k:progn»
			       (setq tempname
				     (make-temp-name
				      (expand-file-name «s:"tmp"» dir)))
                               «m:;; »«x:Pass in nil&nil rather than point-min&max
»                               «m:;; »«x:cause we're saving the whole buffer.
»                               «m:;; »«x:write-region-annotate-functions may use it.
»                               (write-region nil nil
                                             tempname nil  realname
                                             buffer-file-truename 'excl)
                               («k:when» save-silently (message nil))
			       nil)
			   (file-already-exists t))
		    «m:;; »«x:The file was somehow created by someone else between
»		    «m:;; »«x:`«c:make-temp-name»' and `«c:write-region»', let's try again.
»		    nil)
		  (setq succeed t))
	      «m:;; »«x:Reset the umask.
»	      (set-default-file-modes umask)
	      «m:;; »«x:If we failed, restore the buffer's modtime.
»	      («k:unless» succeed
		(set-visited-file-modtime old-modtime)))
	    «m:;; »«x:Since we have created an entirely new file,
»	    «m:;; »«x:make sure it gets the right permission bits set.
»	    (setq setmodes (or setmodes
 			       (list (or (file-modes buffer-file-name)
					 (logand ?\666 umask))
				     (file-extended-attributes buffer-file-name)
				     buffer-file-name)))
	    «m:;; »«x:We succeeded in writing the temp file,
»	    «m:;; »«x:so rename it.
»	    (rename-file tempname buffer-file-name t))
	«m:;; »«x:If file not writable, see if we can make it writable
»	«m:;; »«x:temporarily while we write it.
»	«m:;; »«x:But no need to do so if we have just backed it up
»	«m:;; »«x:(setmodes is set) because that says we're superseding.
»	(«k:cond» ((and tempsetmodes (not setmodes))
	       «m:;; »«x:Change the mode back, after writing.
»	       (setq setmodes (list (file-modes buffer-file-name)
				    (file-extended-attributes buffer-file-name)
				    buffer-file-name))
	       «m:;; »«x:If set-file-extended-attributes fails, fall back on
»	       «m:;; »«x:set-file-modes.
»	       («k:unless»
		   (with-demoted-errors
		     (set-file-extended-attributes buffer-file-name
						   (nth 1 setmodes)))
		 (set-file-modes buffer-file-name
				 (logior (car setmodes) 128))))))
	(«k:let» (success)
	  («k:unwind-protect»
	      («k:progn»
                «m:;; »«x:Pass in nil&nil rather than point-min&max to indicate
»                «m:;; »«x:we're saving the buffer rather than just a region.
»                «m:;; »«x:write-region-annotate-functions may make us of it.
»                (write-region nil nil
                              buffer-file-name nil t buffer-file-truename)
                («k:when» save-silently (message nil))
		(setq success t))
	    «m:;; »«x:If we get an error writing the new file, and we made
»	    «m:;; »«x:the backup by renaming, undo the backing-up.
»	    (and setmodes (not success)
		 («k:progn»
		   (rename-file (nth 2 setmodes) buffer-file-name t)
		   (setq buffer-backed-up nil))))))
    setmodes))

(declare-function diff-no-select «s:"diff"»
		  (old new «t:&optional» switches no-async buf))

(«k:defvar» «v:save-some-buffers-action-alist»
  `((?\C-r
     ,(«k:lambda» (buf)
        («k:if» (not enable-recursive-minibuffers)
            («k:progn» (display-buffer buf)
                   (setq other-window-scroll-buffer buf))
          (view-buffer buf («k:lambda» (_) (exit-recursive-edit)))
          (recursive-edit))
        «m:;; »«x:Return nil to ask about BUF again.
»        nil)
     ,(purecopy «s:"view this buffer"»))
    (?d ,(«k:lambda» (buf)
           («k:if» (null (buffer-file-name buf))
               (message «s:"Not applicable: no file"»)
             («k:require» '«c:diff»)            «m:;»«x:for diff-no-select.
»             («k:let» ((diffbuf (diff-no-select (buffer-file-name buf) buf
                                            nil 'noasync)))
               («k:if» (not enable-recursive-minibuffers)
                   («k:progn» (display-buffer diffbuf)
                          (setq other-window-scroll-buffer diffbuf))
                 (view-buffer diffbuf («k:lambda» (_) (exit-recursive-edit)))
                 (recursive-edit))))
           «m:;; »«x:Return nil to ask about BUF again.
»           nil)
	,(purecopy «s:"view changes in this buffer"»)))
  «d:"ACTION-ALIST argument used in call to `«c:map-y-or-n-p»'."»)
(put 'save-some-buffers-action-alist 'risky-local-variable t)

(«k:defvar» «v:buffer-save-without-query» nil
  «d:"Non-nil means `«c:save-some-buffers»' should save this buffer without asking."»)
(make-variable-buffer-local 'buffer-save-without-query)

(«k:defun» «f:save-some-buffers» («t:&optional» arg pred)
  «d:"Save some modified file-visiting buffers.  Asks user about each one.
You can answer `y' to save, `n' not to save, `«c:C-r»' to look at the
buffer in question with `«c:view-buffer»' before deciding or `d' to
view the differences using `«c:diff-buffer-with-file»'.

This command first saves any buffers where `«c:buffer-save-without-query»' is
non-nil, without asking.

Optional argument (the prefix) non-nil means save all with no questions.
Optional second argument PRED determines which buffers are considered:
If PRED is nil, all the file-visiting buffers are considered.
If PRED is t, then certain non-file buffers will also be considered.
If PRED is a zero-argument function, it indicates for each buffer whether
to consider it or not when called with that buffer current.

See `«c:save-some-buffers-action-alist»' if you want to
change the additional actions you can take on files."»
  (interactive «s:"P"»)
  («k:save-window-excursion»
    («k:let*» (queried autosaved-buffers
	   files-done abbrevs-done)
      («k:dolist» (buffer (buffer-list))
	«m:;; »«x:First save any buffers that we're supposed to save unconditionally.
»	«m:;; »«x:That way the following code won't ask about them.
»	(«k:with-current-buffer» buffer
	  («k:when» (and buffer-save-without-query (buffer-modified-p))
	    (push (buffer-name) autosaved-buffers)
	    (save-buffer))))
      «m:;; »«x:Ask about those buffers that merit it,
»      «m:;; »«x:and record the number thus saved.
»      (setq files-done
	    (map-y-or-n-p
             («k:lambda» (buffer)
	       «m:;; »«x:Note that killing some buffers may kill others via
»	       «m:;; »«x:hooks (e.g. Rmail and its viewing buffer).
»	       (and (buffer-live-p buffer)
		    (buffer-modified-p buffer)
                    (not (buffer-base-buffer buffer))
                    (or
                     (buffer-file-name buffer)
                     (and pred
                          («k:progn»
                            (set-buffer buffer)
                            (and buffer-offer-save (> (buffer-size) 0)))))
                    (or (not (functionp pred))
                        («k:with-current-buffer» buffer (funcall pred)))
                    («k:if» arg
                        t
                      (setq queried t)
                      («k:if» (buffer-file-name buffer)
                          (format «s:"Save file %s? "»
                                  (buffer-file-name buffer))
                        (format «s:"Save buffer %s? "»
                                (buffer-name buffer))))))
             («k:lambda» (buffer)
               («k:with-current-buffer» buffer
                 (save-buffer)))
             (buffer-list)
	     '(«s:"buffer"» «s:"buffers"» «s:"save"»)
	     save-some-buffers-action-alist))
      «m:;; »«x:Maybe to save abbrevs, and record whether
»      «m:;; »«x:we either saved them or asked to.
»      (and save-abbrevs abbrevs-changed
	   («k:progn»
	     («k:if» (or arg
		     (eq save-abbrevs 'silently)
		     (y-or-n-p (format «s:"Save abbrevs in %s? "» abbrev-file-name)))
		 (write-abbrev-file nil))
	     «m:;; »«x:Don't keep bothering user if he says no.
»	     (setq abbrevs-changed nil)
	     (setq abbrevs-done t)))
      (or queried (> files-done 0) abbrevs-done
	  («k:cond»
	   ((null autosaved-buffers)
            («k:when» (called-interactively-p 'any)
              (files--message «s:"(No files need saving)"»)))
	   ((= (length autosaved-buffers) 1)
	    (files--message «s:"(Saved %s)"» (car autosaved-buffers)))
	   (t
	    (files--message «s:"(Saved %d files: %s)"»
                            (length autosaved-buffers)
                            (mapconcat 'identity autosaved-buffers «s:", "»))))))))

(«k:defun» «f:clear-visited-file-modtime» ()
  «d:"Clear out records of last mod time of visited file.
Next attempt to save will certainly not complain of a discrepancy."»
  (set-visited-file-modtime 0))

(«k:defun» «f:not-modified» («t:&optional» arg)
  «d:"Mark current buffer as unmodified, not needing to be saved.
With prefix ARG, mark buffer as modified, so \\[«c:save-buffer»] will save.

It is not a good idea to use this function in Lisp programs, because it
prints a message in the minibuffer.  Instead, use `«c:set-buffer-modified-p»'."»
  («k:declare» (interactive-only set-buffer-modified-p))
  (interactive «s:"P"»)
  (files--message («k:if» arg «s:"Modification-flag set"»
                    «s:"Modification-flag cleared"»))
  (set-buffer-modified-p arg))

(«k:defun» «f:toggle-read-only» («t:&optional» arg interactive)
