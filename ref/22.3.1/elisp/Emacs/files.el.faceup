		 (or (file-accessible-directory-p user-emacs-directory)
		     (setq errtype «s:"access"»))
	       (with-file-modes ?\700
		 («k:condition-case» nil
		     (make-directory user-emacs-directory)
		   («w:error» (setq errtype «s:"create"»)))))
