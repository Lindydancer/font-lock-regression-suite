  «b::type» 'regexp)
(make-obsolete-variable 'automount-dir-prefix 'directory-abbrev-alist «s:"24.3"»)

(«k:defvar» «v:abbreviated-home-dir» nil
  «d:"The user's homedir abbreviated according to `«c:directory-abbrev-alist»'."»)

(«k:defun» «f:abbreviate-file-name» (filename)
  «d:"Return a version of FILENAME shortened using `«c:directory-abbrev-alist»'.
This also substitutes \"~\" for the user's home directory (unless the
home directory is a root directory) and removes automounter prefixes
\(see the variable `«c:automount-dir-prefix»')."»
  «m:;; »«x:Get rid of the prefixes added by the automounter.
»  («k:save-match-data»
    («k:if» (and automount-dir-prefix
	     (string-match automount-dir-prefix filename)
	     (file-exists-p (file-name-directory
			     (substring filename (1- (match-end 0))))))
	(setq filename (substring filename (1- (match-end 0)))))
    «m:;; »«x:Avoid treating /home/foo as /home/Foo during `~' substitution.
»    «m:;; »«x:To fix this right, we need a `«c:file-name-case-sensitive-p»'
»    «m:;; »«x:function, but we don't have that yet, so just guess.
»    («k:let» ((case-fold-search
	   (memq system-type '(ms-dos windows-nt darwin cygwin))))
      «m:;; »«x:If any elt of directory-abbrev-alist matches this name,
»      «m:;; »«x:abbreviate accordingly.
»      («k:dolist» (dir-abbrev directory-abbrev-alist)
	(«k:if» (string-match (car dir-abbrev) filename)
	    (setq filename
		  (concat (cdr dir-abbrev)
			  (substring filename (match-end 0))))))
      «m:;; »«x:Compute and save the abbreviated homedir name.
»      «m:;; »«x:We defer computing this until the first time it's needed, to
»      «m:;; »«x:give time for directory-abbrev-alist to be set properly.
»      «m:;; »«x:We include a slash at the end, to avoid spurious matches
»      «m:;; »«x:such as `«c:/usr/foobar»' when the home dir is `«c:/usr/foo»'.
»      (or abbreviated-home-dir
	  (setq abbreviated-home-dir
		(«k:let» ((abbreviated-home-dir «s:"$foo"»))
		  (concat «s:"\\`"» (abbreviate-file-name (expand-file-name «s:"~"»))
			  «s:"«h:\\»«o:(»/«h:\\»«o:|»\\'«h:\\»«o:)»"»))))

      «m:;; »«x:If FILENAME starts with the abbreviated homedir,
»      «m:;; »«x:make it start with `~' instead.
»      («k:if» (and (string-match abbreviated-home-dir filename)
	       «m:;; »«x:If the home dir is just /, don't change it.
»	       (not (and (= (match-end 0) 1)
			 (= (aref filename 0) ?/)))
	       «m:;; »«x:MS-DOS root directories can come with a drive letter;
»	       «m:;; »«x:Novell Netware allows drive letters beyond `«c:Z:»'.
»	       (not (and (memq system-type '(ms-dos windows-nt cygwin))
			 («k:save-match-data»
			   (string-match «s:"^[a-zA-`]:/$"» filename)))))
	  (setq filename
		(concat «s:"~"»
			(match-string 1 filename)
			(substring filename (match-end 0)))))
      filename)))

(«k:defun» «f:find-buffer-visiting» (filename «t:&optional» predicate)
  «d:"Return the buffer visiting file FILENAME (a string).
This is like `«c:get-file-buffer»', except that it checks for any buffer
visiting the same file, possibly under a different name.
If PREDICATE is non-nil, only buffers satisfying it are eligible,
and others are ignored.
If there is no such live buffer, return nil."»
  («k:let» ((predicate (or predicate #'identity))
        (truename (abbreviate-file-name (file-truename filename))))
    (or («k:let» ((buf (get-file-buffer filename)))
          («k:when» (and buf (funcall predicate buf)) buf))
        («k:let» ((list (buffer-list)) found)
          («k:while» (and (not found) list)
            («k:with-current-buffer» (car list)
              («k:if» (and buffer-file-name
                       (string= buffer-file-truename truename)
                       (funcall predicate (current-buffer)))
                  (setq found (car list))))
            (setq list (cdr list)))
          found)
        («k:let*» ((attributes (file-attributes truename))
               (number (nthcdr 10 attributes))
               (list (buffer-list)) found)
          (and buffer-file-numbers-unique
               (car-safe number)       «m:;»«x:Make sure the inode is not just nil.
»               («k:while» (and (not found) list)
                 («k:with-current-buffer» (car list)
                   («k:if» (and buffer-file-name
                            (equal buffer-file-number number)
                            «m:;; »«x:Verify this buffer's file number
»                            «m:;; »«x:still belongs to its file.
»                            (file-exists-p buffer-file-name)
                            (equal (file-attributes buffer-file-truename)
                                   attributes)
                            (funcall predicate (current-buffer)))
                       (setq found (car list))))
                 (setq list (cdr list))))
          found))))

(«k:defcustom» «v:find-file-wildcards» t
  «d:"Non-nil means file-visiting commands should handle wildcards.
For example, if you specify `«c:*.c»', that would visit all the files
whose names match the pattern."»
  «b::group» 'files
  «b::version» «s:"20.4"»
  «b::type» 'boolean)

(«k:defcustom» «v:find-file-suppress-same-file-warnings» nil
  «d:"Non-nil means suppress warning messages for symlinked files.
When nil, Emacs prints a warning when visiting a file that is already
visited, but with a different name.  Setting this option to t
suppresses this warning."»
  «b::group» 'files
  «b::version» «s:"21.1"»
  «b::type» 'boolean)

(«k:defcustom» «v:large-file-warning-threshold» 10000000
  «d:"Maximum size of file above which a confirmation is requested.
When nil, never request confirmation."»
  «b::group» 'files
  «b::group» 'find-file
  «b::version» «s:"22.1"»
  «b::type» '(choice integer (const «b::tag» «s:"Never request confirmation"» nil)))

(«k:defcustom» «v:out-of-memory-warning-percentage» nil
  «d:"Warn if file size exceeds this percentage of available free memory.
When nil, never issue warning.  Beware: This probably doesn't do what you
think it does, because \"free\" is pretty hard to define in practice."»
  «b::group» 'files
  «b::group» 'find-file
  «b::version» «s:"25.1"»
  «b::type» '(choice integer (const «b::tag» «s:"Never issue warning"» nil)))

(«k:defun» «f:abort-if-file-too-large» (size op-type filename)
  «d:"If file SIZE larger than `«c:large-file-warning-threshold»', allow user to abort.
OP-TYPE specifies the file operation being performed (for message to user)."»
  («k:when» (and large-file-warning-threshold size
	     (> size large-file-warning-threshold)
	     (not (y-or-n-p (format «s:"File %s is large (%s), really %s? "»
				    (file-name-nondirectory filename)
				    (file-size-human-readable size) op-type))))
    (user-error «s:"Aborted"»)))

(«k:defun» «f:warn-maybe-out-of-memory» (size)
  «d:"Warn if an attempt to open file of SIZE bytes may run out of memory."»
  («k:when» (and (numberp size) (not (zerop size))
	     (integerp out-of-memory-warning-percentage))
    («k:let» ((meminfo (memory-info)))
      («k:when» (consp meminfo)
	(«k:let» ((total-free-memory (float (+ (nth 1 meminfo) (nth 3 meminfo)))))
	  («k:when» (> (/ size 1024)
		   (/ (* total-free-memory out-of-memory-warning-percentage)
		      100.0))
	    («w:warn»
	     «s:"You are trying to open a file whose size (%s)
exceeds the %S%% of currently available free memory (%s).
If that fails, try to open it with `«c:find-file-literally»'
\(but note that some characters might be displayed incorrectly)."»
	     (file-size-human-readable size)
	     out-of-memory-warning-percentage
	     (file-size-human-readable (* total-free-memory 1024)))))))))

(«k:defun» «f:files--message» (format «t:&rest» args)
  «d:"Like `«c:message»', except sometimes don't print to minibuffer.
If the variable `«c:save-silently»' is non-nil, the message is not
displayed on the minibuffer."»
  (apply #'message format args)
  («k:when» save-silently (message nil)))

(«k:defun» «f:find-file-noselect» (filename «t:&optional» nowarn rawfile wildcards)
  «d:"Read file FILENAME into a buffer and return the buffer.
If a buffer exists visiting FILENAME, return that one, but
verify that the file has not changed since visited or saved.
The buffer is not selected, just returned to the caller.
Optional second arg NOWARN non-nil means suppress any warning messages.
Optional third arg RAWFILE non-nil means the file is read literally.
Optional fourth arg WILDCARDS non-nil means do wildcard processing
and visit all the matching files.  When wildcards are actually
used and expanded, return a list of buffers that are visiting
the various files."»
  (setq filename
	(abbreviate-file-name
	 (expand-file-name filename)))
  («k:if» (file-directory-p filename)
      (or (and find-file-run-dired
	       (run-hook-with-args-until-success
		'find-directory-functions
		(«k:if» find-file-visit-truename
		    (abbreviate-file-name (file-truename filename))
		  filename)))
	  («w:error» «s:"%s is a directory"» filename))
    («k:if» (and wildcards
	     find-file-wildcards
	     (not (string-match «s:"\\`/:"» filename))
	     (string-match «s:"[[*?]"» filename))
	(«k:let» ((files («k:condition-case» nil
			 (file-expand-wildcards filename t)
		       («w:error» (list filename))))
	      (find-file-wildcards nil))
	  («k:if» (null files)
	      (find-file-noselect filename)
	    (mapcar #'find-file-noselect files)))
      («k:let*» ((buf (get-file-buffer filename))
	     (truename (abbreviate-file-name (file-truename filename)))
	     (attributes (file-attributes truename))
	     (number (nthcdr 10 attributes))
	     «m:;; »«x:Find any buffer for a file which has same truename.
»	     (other (and (not buf) (find-buffer-visiting filename))))
	«m:;; »«x:Let user know if there is a buffer with the same truename.
»	(«k:if» other
	    («k:progn»
	      (or nowarn
		  find-file-suppress-same-file-warnings
		  (string-equal filename (buffer-file-name other))
		  (files--message «s:"%s and %s are the same file"»
                                  filename (buffer-file-name other)))
	      «m:;; »«x:Optionally also find that buffer.
»	      («k:if» (or find-file-existing-other-name find-file-visit-truename)
		  (setq buf other))))
	«m:;; »«x:Check to see if the file looks uncommonly large.
»	(«k:when» (not (or buf nowarn))
	  (abort-if-file-too-large (nth 7 attributes) «s:"open"» filename)
	  (warn-maybe-out-of-memory (nth 7 attributes)))
	(«k:if» buf
	    «m:;; »«x:We are using an existing buffer.
»	    («k:let» (nonexistent)
	      (or nowarn
		  (verify-visited-file-modtime buf)
		  («k:cond» ((not (file-exists-p filename))
			 (setq nonexistent t)
			 (message «s:"File %s no longer exists!"» filename))
			«m:;; »«x:Certain files should be reverted automatically
»			«m:;; »«x:if they have changed on disk and not in the buffer.
»			((and (not (buffer-modified-p buf))
			      («k:let» ((tail revert-without-query)
				    (found nil))
				(«k:while» tail
				  («k:if» (string-match (car tail) filename)
				      (setq found t))
				  (setq tail (cdr tail)))
				found))
			 («k:with-current-buffer» buf
			   (message «s:"Reverting file %s..."» filename)
			   (revert-buffer t t)
			   (message «s:"Reverting file %s...done"» filename)))
			((yes-or-no-p
			  («k:if» (string= (file-name-nondirectory filename)
				       (buffer-name buf))
			      (format
			       («k:if» (buffer-modified-p buf)
				   «s:"File %s changed on disk.  Discard your edits? "»
				 «s:"File %s changed on disk.  Reread from disk? "»)
			       (file-name-nondirectory filename))
			    (format
			     («k:if» (buffer-modified-p buf)
				 «s:"File %s changed on disk.  Discard your edits in %s? "»
			       «s:"File %s changed on disk.  Reread from disk into %s? "»)
			     (file-name-nondirectory filename)
			     (buffer-name buf))))
			 («k:with-current-buffer» buf
			   (revert-buffer t t)))))
	      («k:with-current-buffer» buf

		«m:;; »«x:Check if a formerly read-only file has become
»		«m:;; »«x:writable and vice versa, but if the buffer agrees
»		«m:;; »«x:with the new state of the file, that is ok too.
»		(«k:let» ((read-only (not (file-writable-p buffer-file-name))))
		  («k:unless» (or nonexistent
			      (eq read-only buffer-file-read-only)
			      (eq read-only buffer-read-only))
		    («k:when» (or nowarn
			      («k:let*» ((new-status
				      («k:if» read-only «s:"read-only"» «s:"writable"»))
				     (question
