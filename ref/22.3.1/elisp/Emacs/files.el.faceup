(«k:defun» «f:cd-absolute» (dir)
  «d:"Change current directory to given absolute file name DIR."»
  «m:;; »«x:Put the name into directory syntax now,
»  «m:;; »«x:because otherwise expand-file-name may give some bad results.
»  (setq dir (file-name-as-directory dir))
  «m:;; »«x:We used to additionally call abbreviate-file-name here, for an
»  «m:;; »«x:unknown reason.  Problem is that most buffers are setup
»  «m:;; »«x:without going through cd-absolute and don't call
»  «m:;; »«x:abbreviate-file-name on their default-directory, so the few that
»  «m:;; »«x:do end up using a superficially different directory.
»  (setq dir (expand-file-name dir))
  («k:if» (not (file-directory-p dir))
      («k:if» (file-exists-p dir)
	  («w:error» «s:"%s is not a directory"» dir)
	(«w:error» «s:"%s: no such directory"» dir))
    («k:unless» (file-accessible-directory-p dir)
      («w:error» «s:"Cannot cd to %s:  Permission denied"» dir))
    (setq default-directory dir)
    (setq list-buffers-directory dir)))

(«k:defun» «f:cd» (dir)
  «d:"Make DIR become the current buffer's default directory.
If your environment includes a `«c:CDPATH»' variable, try each one of
that list of directories (separated by occurrences of
`«c:path-separator»') when resolving a relative directory name.
The path separator is colon in GNU and GNU-like systems."»
  (interactive
   (list
    «m:;; »«x:FIXME: There's a subtle bug in the completion below.  Seems linked
»    «m:;; »«x:to a fundamental difficulty of implementing `«c:predicate»' correctly.
»    «m:;; »«x:The manifestation is that TAB may list non-directories in the case where
»    «m:;; »«x:those files also correspond to valid directories (if your cd-path is (A/
»    «m:;; »«x:B/) and you have A/a a file and B/a a directory, then both `a' and `«c:a/»'
»    «m:;; »«x:will be listed as valid completions).
»    «m:;; »«x:This is because `a' (listed because of A/a) is indeed a valid choice
»    «m:;; »«x:(which will lead to the use of B/a).
»    (minibuffer-with-setup-hook
        («k:lambda» ()
          (setq minibuffer-completion-table
                (apply-partially #'locate-file-completion-table
                                 cd-path nil))
          (setq minibuffer-completion-predicate
                («k:lambda» (dir)
                  (locate-file dir cd-path nil
                               («k:lambda» (f) (and (file-directory-p f) 'dir-ok))))))
      («k:unless» cd-path
        (setq cd-path (or (parse-colon-path (getenv «s:"CDPATH"»))
                          (list «s:"./"»))))
      (read-directory-name «s:"Change default directory: "»
                           default-directory default-directory
                           t))))
  («k:unless» cd-path
    (setq cd-path (or (parse-colon-path (getenv «s:"CDPATH"»))
                      (list «s:"./"»))))
  (cd-absolute
   (or (locate-file dir cd-path nil
                    («k:lambda» (f) (and (file-directory-p f) 'dir-ok)))
       («w:error» «s:"No such directory found via CDPATH environment variable"»))))

(«k:defsubst» «f:directory-name-p» (name)
  «d:"Return non-nil if NAME ends with a slash character."»
