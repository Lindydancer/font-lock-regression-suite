    «m:;; »«x:These two must come after html, because they are more general:
»    («s:"<\\?xml "» . xml-mode)
    (,(«k:let*» ((incomment-re «s:"«h:\\»«o:(?:»[«n:^»-]«h:\\»«o:|»-[«n:^»-]«h:\\»«o:)»"»)
	     (comment-re (concat «s:"«h:\\»«o:(?:»!--"» incomment-re «s:"*-->[ \t\r\n]*<«h:\\»«o:)»"»)))
	(concat «s:"[ \t\r\n]*<"» comment-re «s:"*!DOCTYPE "»))
