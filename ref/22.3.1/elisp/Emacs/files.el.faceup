(«k:defun» «f:inhibit-local-variables-p» ()
  «d:"Return non-nil if file local variables should be ignored.
This checks the file (or buffer) name against `«c:inhibit-local-variables-regexps»'
and `«c:inhibit-local-variables-suffixes»'.  If
`«c:inhibit-local-variables-ignore-case»' is non-nil, this ignores case."»
  («k:let» ((temp inhibit-local-variables-regexps)
	(name («k:if» buffer-file-name
		  (file-name-sans-versions buffer-file-name)
		(buffer-name)))
	(case-fold-search inhibit-local-variables-ignore-case))
    («k:while» («k:let» ((sufs inhibit-local-variables-suffixes))
	     («k:while» (and sufs (not (string-match (car sufs) name)))
	       (setq sufs (cdr sufs)))
	     sufs)
      (setq name (substring name 0 (match-beginning 0))))
    («k:while» (and temp
		(not (string-match (car temp) name)))
      (setq temp (cdr temp)))
    temp))

