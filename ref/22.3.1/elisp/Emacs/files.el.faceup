(«k:defun» «f:hack-local-variables-prop-line» («t:&optional» mode-only)
  «d:"Return local variables specified in the -*- line.
Returns an alist of elements (VAR . VAL), where VAR is a variable
and VAL is the specified value.  Ignores any specification for
`«c:mode:»' and `«c:coding:»' (which should have already been handled
by `«c:set-auto-mode»' and `«c:set-auto-coding»', respectively).
Return nil if the -*- line is malformed.

If MODE-ONLY is non-nil, just returns the symbol specifying the
mode, if there is one, otherwise nil."»
  («k:catch» '«c:malformed-line»
    («k:save-excursion»
      (goto-char (point-min))
      («k:let» ((end (set-auto-mode-1))
	    result)
	(«k:cond» ((not end)
	       nil)
	      ((looking-at «s:"[ \t]*«h:\\»«o:(»[«n:^» \t\n\r:;]+«h:\\»«o:)»«h:\\»«o:(»[ \t]*-\\*-«h:\\»«o:)»"»)
	       «m:;; »«x:Simple form: "-*- MODENAME -*-".
»	       («k:if» mode-only
		   (intern (concat (match-string 1) «s:"-mode"»))))
	      (t
	       «m:;; »«x:Hairy form: '-*-' [ <variable> ':' <value> ';' ]* '-*-'
»	       «m:;; »«x:(last ";" is optional).
»	       «m:;; »«x:If MODE-ONLY, just check for `«c:mode»'.
»	       «m:;; »«x:Otherwise, parse the -*- line into the RESULT alist.
»	       («k:while» (not (or (and mode-only result)
                               (>= (point) end)))
		 («k:unless» (looking-at hack-local-variable-regexp)
		   (message «s:"Malformed mode-line: %S"»
                            (buffer-substring-no-properties (point) end))
		   («k:throw» '«c:malformed-line» nil))
		 (goto-char (match-end 0))
		 «m:;; »«x:There used to be a downcase here,
»		 «m:;; »«x:but the manual didn't say so,
»		 «m:;; »«x:and people want to set var names that aren't all lc.
»		 («k:let*» ((key (intern (match-string 1)))
			(val («k:save-restriction»
			       (narrow-to-region (point) end)
			       («k:let» ((read-circle nil))
				 (read (current-buffer)))))
			«m:;; »«x:It is traditional to ignore
»			«m:;; »«x:case when checking for `«c:mode»' in set-auto-mode,
»			«m:;; »«x:so we must do that here as well.
»			«m:;; »«x:That is inconsistent, but we're stuck with it.
»			«m:;; »«x:The same can be said for `«c:coding»' in set-auto-coding.
»			(keyname (downcase (symbol-name key))))
		   («k:if» mode-only
		       (and (equal keyname «s:"mode"»)
			    (setq result
				  (intern (concat (downcase (symbol-name val))
						  «s:"-mode"»))))
		     (or (equal keyname «s:"coding"»)
			 («k:condition-case» nil
			     (push (cons («k:cond» ((eq key 'eval) 'eval)
					       «m:;; »«x:Downcase "Mode:".
»					       ((equal keyname «s:"mode"») 'mode)
					       (t (indirect-variable key)))
					 val) result)
			   («w:error» nil))))
		   (skip-chars-forward «s:" \t;"»)))
	       result))))))

(«k:defun» «f:hack-local-variables-filter» (variables dir-name)
  «d:"Filter local variable settings, querying the user if necessary.
VARIABLES is the alist of variable-value settings.  This alist is
 filtered based on the values of `«c:ignored-local-variables»',
 `«c:enable-local-eval»', `«c:enable-local-variables»', and (if necessary)
 user interaction.  The results are added to
 `«c:file-local-variables-alist»', without applying them.
If these settings come from directory-local variables, then
DIR-NAME is the name of the associated directory.  Otherwise it is nil."»
  «m:;; »«x:Find those variables that we may want to save to
»  «m:;; »«x:`«c:safe-local-variable-values»'.
»  («k:let» (all-vars risky-vars unsafe-vars)
    («k:dolist» (elt variables)
      («k:let» ((var (car elt))
	    (val (cdr elt)))
	(«k:cond» ((memq var ignored-local-variables)
	       «m:;; »«x:Ignore any variable in `«c:ignored-local-variables»'.
»	       nil)
	      «m:;; »«x:Obey `«c:enable-local-eval»'.
»	      ((eq var 'eval)
	       («k:when» enable-local-eval
		 («k:let» ((safe (or (hack-one-local-variable-eval-safep val)
				 «m:;; »«x:In case previously marked safe (bug#5636).
»				 (safe-local-variable-p var val))))
		   «m:;; »«x:If not safe and e-l-v = :safe, ignore totally.
»		   («k:when» (or safe (not (eq enable-local-variables «b::safe»)))
		     (push elt all-vars)
		     (or (eq enable-local-eval t)
			 safe
			 (push elt unsafe-vars))))))
	      «m:;; »«x:Ignore duplicates (except `«c:mode»') in the present list.
»	      ((and (assq var all-vars) (not (eq var 'mode))) nil)
	      «m:;; »«x:Accept known-safe variables.
»	      ((or (memq var '(mode unibyte coding))
		   (safe-local-variable-p var val))
	       (push elt all-vars))
	      «m:;; »«x:The variable is either risky or unsafe:
»	      ((not (eq enable-local-variables «b::safe»))
	       (push elt all-vars)
	       («k:if» (risky-local-variable-p var val)
		   (push elt risky-vars)
		 (push elt unsafe-vars))))))
    (and all-vars
	 «m:;; »«x:Query, unless all vars are safe or user wants no querying.
»	 (or (and (eq enable-local-variables t)
		  (null unsafe-vars)
		  (null risky-vars))
	     (memq enable-local-variables '(«b::all» «b::safe»))
	     (hack-local-variables-confirm all-vars unsafe-vars
					   risky-vars dir-name))
	 («k:dolist» (elt all-vars)
	   («k:unless» (memq (car elt) '(eval mode))
	     («k:unless» dir-name
	       (setq dir-local-variables-alist
		     (assq-delete-all (car elt) dir-local-variables-alist)))
	     (setq file-local-variables-alist
		   (assq-delete-all (car elt) file-local-variables-alist)))
	   (push elt file-local-variables-alist)))))

«m:;; »«x:TODO?  Warn once per file rather than once per session?
»(«k:defvar» «v:hack-local-variables--warned-lexical» nil)

(«k:defun» «f:hack-local-variables» («t:&optional» mode-only)
  «d:"Parse and put into effect this buffer's local variables spec.
Uses `«c:hack-local-variables-apply»' to apply the variables.

If MODE-ONLY is non-nil, all we do is check whether a \"mode:\"
is specified, and return the corresponding mode symbol, or nil.
In this case, we try to ignore minor-modes, and only return a
major-mode.

If `«c:enable-local-variables»' or `«c:local-enable-local-variables»' is nil,
this function does nothing.  If `«c:inhibit-local-variables-regexps»'
applies to the file in question, the file is not scanned for
local variables, but directory-local variables may still be applied."»
  «m:;; »«x:We don't let inhibit-local-variables-p influence the value of
»  «m:;; »«x:enable-local-variables, because then it would affect dir-local
»  «m:;; »«x:variables.  We don't want to search eg tar files for file local
»  «m:;; »«x:variable sections, but there is no reason dir-locals cannot apply
»  «m:;; »«x:to them.  The real meaning of inhibit-local-variables-p is "do
»  «m:;; »«x:not scan this file for local variables".
»  («k:let» ((enable-local-variables
	 (and local-enable-local-variables enable-local-variables))
	result)
    («k:unless» mode-only
      (setq file-local-variables-alist nil)
      (with-demoted-errors «s:"Directory-local variables error: %s"»
	«m:;; »«x:Note this is a no-op if enable-local-variables is nil.
»	(hack-dir-local-variables)))
    «m:;; »«x:This entire function is basically a no-op if enable-local-variables
»    «m:;; »«x:is nil.  All it does is set file-local-variables-alist to nil.
»    («k:when» enable-local-variables
      «m:;; »«x:This part used to ignore enable-local-variables when mode-only
»      «m:;; »«x:was non-nil.  That was inappropriate, eg consider the
»      «m:;; »«x:(artificial) example of:
»      «m:;; »«x:(setq local-enable-local-variables nil)
»      «m:;; »«x:Open a file foo.txt that contains "mode: sh".
»      «m:;; »«x:It correctly opens in text-mode.
»      «m:;; »«x:M-x set-visited-file name foo.c, and it incorrectly stays in text-mode.
»      («k:unless» (or (inhibit-local-variables-p)
		  «m:;; »«x:If MODE-ONLY is non-nil, and the prop line specifies a
»		  «m:;; »«x:mode, then we're done, and have no need to scan further.
»		  (and (setq result (hack-local-variables-prop-line mode-only))
		       mode-only))
	«m:;; »«x:Look for "Local variables:" line in last page.
»	(«k:save-excursion»
	  (goto-char (point-max))
	  (search-backward «s:"\n\^L"» (max (- (point-max) 3000) (point-min))
			   'move)
	  («k:when» («k:let» ((case-fold-search t))
		  (search-forward «s:"Local Variables:"» nil t))
	    (skip-chars-forward «s:" \t"»)
	    «m:;; »«x:suffix is what comes after "local variables:" in its line.
»	    «m:;; »«x:prefix is what comes before "local variables:" in its line.
»	    («k:let» ((suffix
		   (concat
		    (regexp-quote (buffer-substring (point)
						    (line-end-position)))
		    «s:"$"»))
		  (prefix
		   (concat «s:"^"» (regexp-quote
				(buffer-substring (line-beginning-position)
						  (match-beginning 0))))))

	      (forward-line 1)
	      («k:let» ((startpos (point))
		    endpos
		    (thisbuf (current-buffer)))
		(«k:save-excursion»
		  («k:unless» («k:let» ((case-fold-search t))
			    (re-search-forward
			     (concat prefix «s:"[ \t]*End:[ \t]*"» suffix)
			     nil t))
		    «m:;; »«x:This used to be an error, but really all it means is
»		    «m:;; »«x:that this may simply not be a local-variables section,
»		    «m:;; »«x:so just ignore it.
»		    (message «s:"Local variables list is not properly terminated"»))
		  (beginning-of-line)
		  (setq endpos (point)))

		(«k:with-temp-buffer»
		  (insert-buffer-substring thisbuf startpos endpos)
		  (goto-char (point-min))
		  (subst-char-in-region (point) (point-max) ?\^m ?\n)
		  («k:while» (not (eobp))
		    «m:;; »«x:Discard the prefix.
»		    («k:if» (looking-at prefix)
			(delete-region (point) (match-end 0))
		      («w:error» «s:"Local variables entry is missing the prefix"»))
		    (end-of-line)
		    «m:;; »«x:Discard the suffix.
»		    («k:if» (looking-back suffix (line-beginning-position))
			(delete-region (match-beginning 0) (point))
		      («w:error» «s:"Local variables entry is missing the suffix"»))
		    (forward-line 1))
		  (goto-char (point-min))

		  («k:while» (not (or (eobp)
                                  (and mode-only result)))
		    «m:;; »«x:Find the variable name;
»		    («k:unless» (looking-at hack-local-variable-regexp)
                      («w:error» «s:"Malformed local variable line: %S"»
                             (buffer-substring-no-properties
                              (point) (line-end-position))))
                    (goto-char (match-end 1))
		    («k:let*» ((str (match-string 1))
			   (var (intern str))
			   val val2)
		      (and (equal (downcase (symbol-name var)) «s:"mode"»)
			   (setq var 'mode))
		      «m:;; »«x:Read the variable value.
»		      (skip-chars-forward «s:"^:"»)
		      (forward-char 1)
		      («k:let» ((read-circle nil))
			(setq val (read (current-buffer))))
		      («k:if» mode-only
			  (and (eq var 'mode)
			       «m:;; »«x:Specifying minor-modes via mode: is
»			       «m:;; »«x:deprecated, but try to reject them anyway.
»			       (not (string-match
				     «s:"-minor\\'"»
				     (setq val2 (downcase (symbol-name val)))))
			       (setq result (intern (concat val2 «s:"-mode"»))))
			(«k:cond» ((eq var 'coding))
			      ((eq var 'lexical-binding)
			       («k:unless» hack-local-variables--warned-lexical
				 (setq hack-local-variables--warned-lexical t)
				 (display-warning
                                  «b::warning»
                                  (format-message
                                   «s:"%s: `«c:lexical-binding»' at end of file unreliable"»
                                   (file-name-nondirectory
                                    (or buffer-file-name «s:""»))))))
			      (t
			       («k:ignore-errors»
				 (push (cons («k:if» (eq var 'eval)
						 'eval
					       (indirect-variable var))
					     val) result))))))
		    (forward-line 1))))))))
      «m:;; »«x:Now we've read all the local variables.
»      «m:;; »«x:If MODE-ONLY is non-nil, return whether the mode was specified.
»      («k:if» mode-only result
	«m:;; »«x:Otherwise, set the variables.
»	(hack-local-variables-filter result nil)
	(hack-local-variables-apply)))))

(«k:defun» «f:hack-local-variables-apply» ()
  «d:"Apply the elements of `«c:file-local-variables-alist»'.
If there are any elements, runs `«c:before-hack-local-variables-hook»',
then calls `«c:hack-one-local-variable»' to apply the alist elements one by one.
Finishes by running `«c:hack-local-variables-hook»', regardless of whether
the alist is empty or not.

Note that this function ignores a `«c:mode»' entry if it specifies the same
major mode as the buffer already has."»
  («k:when» file-local-variables-alist
    «m:;; »«x:Any 'evals must run in the Right sequence.
»    (setq file-local-variables-alist
	  (nreverse file-local-variables-alist))
    (run-hooks 'before-hack-local-variables-hook)
    («k:dolist» (elt file-local-variables-alist)
      (hack-one-local-variable (car elt) (cdr elt))))
  (run-hooks 'hack-local-variables-hook))

(«k:defun» «f:safe-local-variable-p» (sym val)
  «d:"Non-nil if SYM is safe as a file-local variable with value VAL.
It is safe if any of these conditions are met:

 * There is a matching entry (SYM . VAL) in the
   `«c:safe-local-variable-values»' user option.

 * The `«c:safe-local-variable»' property of SYM is a function that
   evaluates to a non-nil value with VAL as an argument."»
  (or (member (cons sym val) safe-local-variable-values)
      («k:let» ((safep (get sym 'safe-local-variable)))
        (and (functionp safep)
             «m:;; »«x:If the function signals an error, that means it
»             «m:;; »«x:can't assure us that the value is safe.
»             (with-demoted-errors (funcall safep val))))))

(«k:defun» «f:risky-local-variable-p» (sym «t:&optional» _ignored)
  «d:"Non-nil if SYM could be dangerous as a file-local variable.
It is dangerous if either of these conditions are met:

 * Its `«c:risky-local-variable»' property is non-nil.

 * Its name ends with \"hook(s)\", \"function(s)\", \"form(s)\", \"map\",
   \"program\", \"command(s)\", \"predicate(s)\", \"frame-alist\",
   \"mode-alist\", \"font-lock-(syntactic-)keyword*\",
   \"map-alist\", or \"bindat-spec\"."»
  «m:;; »«x:If this is an alias, check the base name.
»  («k:condition-case» nil
      (setq sym (indirect-variable sym))
    («w:error» nil))
  (or (get sym 'risky-local-variable)
      (string-match «s:"-hooks?$«h:\\»«o:|»-functions?$«h:\\»«o:|»-forms?$«h:\\»«o:|»-program$«h:\\»«o:|»\
-commands?$«h:\\»«o:|»-predicates?$«h:\\»«o:|»font-lock-keywords$«h:\\»«o:|»font-lock-keywords\
-[0-9]+$«h:\\»«o:|»font-lock-syntactic-keywords$«h:\\»«o:|»-frame-alist$«h:\\»«o:|»-mode-alist$«h:\\»«o:|»\
-map$«h:\\»«o:|»-map-alist$«h:\\»«o:|»-bindat-spec$"» (symbol-name sym))))

(«k:defun» «f:hack-one-local-variable-quotep» (exp)
  (and (consp exp) (eq (car exp) 'quote) (consp (cdr exp))))

(«k:defun» «f:hack-one-local-variable-constantp» (exp)
  (or (and (not (symbolp exp)) (not (consp exp)))
      (memq exp '(t nil))
      (keywordp exp)
      (hack-one-local-variable-quotep exp)))

(«k:defun» «f:hack-one-local-variable-eval-safep» (exp)
  «d:"Return t if it is safe to eval EXP when it is found in a file."»
  (or (not (consp exp))
      «m:;; »«x:Detect certain `«c:put»' expressions.
»      (and (eq (car exp) 'put)
	   (hack-one-local-variable-quotep (nth 1 exp))
	   (hack-one-local-variable-quotep (nth 2 exp))
	   («k:let» ((prop (nth 1 (nth 2 exp)))
		 (val (nth 3 exp)))
	     («k:cond» ((memq prop '(lisp-indent-hook
				 lisp-indent-function
				 scheme-indent-function))
		    «m:;; »«x:Only allow safe values (not functions).
»		    (or (numberp val)
			(and (hack-one-local-variable-quotep val)
			     (eq (nth 1 val) 'defun))))
		   ((eq prop 'edebug-form-spec)
		    «m:;; »«x:Only allow indirect form specs.
»		    «m:;; »«x:During bootstrapping, edebug-basic-spec might not be
»		    «m:;; »«x:defined yet.
»                    (and (fboundp 'edebug-basic-spec)
			 (hack-one-local-variable-quotep val)
                         (edebug-basic-spec (nth 1 val)))))))
      «m:;; »«x:Allow expressions that the user requested.
»      (member exp safe-local-eval-forms)
      «m:;; »«x:Certain functions can be allowed with safe arguments
»      «m:;; »«x:or can specify verification functions to try.
»      (and (symbolp (car exp))
	   «m:;; »«x:Allow (minor)-modes calls with no arguments.
»	   «m:;; »«x:This obsoletes the use of "mode:" for such things.  (Bug#8613)
»	   (or (and (member (cdr exp) '(nil (1) (0) (-1)))
		    (string-match «s:"-mode\\'"» (symbol-name (car exp))))
	       («k:let» ((prop (get (car exp) 'safe-local-eval-function)))
		 («k:cond» ((eq prop t)
			(«k:let» ((ok t))
			  («k:dolist» (arg (cdr exp))
			    («k:unless» (hack-one-local-variable-constantp arg)
			      (setq ok nil)))
			  ok))
		       ((functionp prop)
			(funcall prop exp))
		       ((listp prop)
			(«k:let» ((ok nil))
			  («k:dolist» (function prop)
			    («k:if» (funcall function exp)
				(setq ok t)))
			  ok))))))))

(«k:defun» «f:hack-one-local-variable--obsolete» (var)
  («k:let» ((o (get var 'byte-obsolete-variable)))
    («k:when» o
      («k:let» ((instead (nth 0 o))
            (since (nth 2 o)))
        (message «s:"%s is obsolete%s; %s"»
                 var («k:if» since (format «s:" (since %s)"» since))
                 («k:if» (stringp instead)
                     (substitute-command-keys instead)
                   (format-message «s:"use `«c:%s»' instead"» instead)))))))

(«k:defun» «f:hack-one-local-variable» (var val)
  «d:"Set local variable VAR with value VAL.
If VAR is `«c:mode»', call `«c:VAL-mode»' as a function unless it's
already the major mode."»
  (pcase var
    (`mode
     («k:let» ((mode (intern (concat (downcase (symbol-name val))
                                 «s:"-mode"»))))
       («k:unless» (eq (indirect-function mode)
                   (indirect-function major-mode))
         (funcall mode))))
    (`eval
     (pcase val
       (`(add-hook ',hook . ,_) (hack-one-local-variable--obsolete hook)))
     («k:save-excursion» (eval val)))
    (_
     (hack-one-local-variable--obsolete var)
     «m:;; »«x:Make sure the string has no text properties.
»     «m:;; »«x:Some text properties can get evaluated in various ways,
»     «m:;; »«x:so it is risky to put them on with a local variable list.
»     («k:if» (stringp val)
         (set-text-properties 0 (length val) nil val))
     (set (make-local-variable var) val))))

«m:;;; »«x:Handling directory-local variables, aka project settings.
»
(«k:defvar» «v:dir-locals-class-alist» '()
  «d:"Alist mapping directory-local variable classes (symbols) to variable lists."»)

(«k:defvar» «v:dir-locals-directory-cache» '()
  «d:"List of cached directory roots for directory-local variable classes.
Each element in this list has the form (DIR CLASS MTIME).
DIR is the name of the directory.
CLASS is the name of a variable class (a symbol).
MTIME is the recorded modification time of the directory-local
variables file associated with this entry.  This time is a list
of integers (the same format as `«c:file-attributes»'), and is
used to test whether the cache entry is still valid.
Alternatively, MTIME can be nil, which means the entry is always
considered valid."»)

(«k:defsubst» «f:dir-locals-get-class-variables» (class)
  «d:"Return the variable list for CLASS."»
  (cdr (assq class dir-locals-class-alist)))

(«k:defun» «f:dir-locals-collect-mode-variables» (mode-variables variables)
  «d:"Collect directory-local variables from MODE-VARIABLES.
VARIABLES is the initial list of variables.
Returns the new list."»
  («k:dolist» (pair mode-variables variables)
    («k:let*» ((variable (car pair))
	   (value (cdr pair))
	   (slot (assq variable variables)))
      «m:;; »«x:If variables are specified more than once, only use the last.  (Why?)
»      «m:;; »«x:The pseudo-variables mode and eval are different (bug#3430).
»      («k:if» (and slot (not (memq variable '(mode eval))))
	  (setcdr slot value)
	«m:;; »«x:Need a new cons in case we setcdr later.
»	(push (cons variable value) variables)))))

(«k:defun» «f:dir-locals-collect-variables» (class-variables root variables)
  «d:"Collect entries from CLASS-VARIABLES into VARIABLES.
ROOT is the root directory of the project.
Return the new variables list."»
  («k:let*» ((file-name (or (buffer-file-name)
			«m:;; »«x:Handle non-file buffers, too.
»			(expand-file-name default-directory)))
	 (sub-file-name («k:if» file-name
                            «m:;; »«x:FIXME: Why not use file-relative-name?
»			    (substring file-name (length root)))))
    («k:condition-case» err
        («k:dolist» (entry class-variables variables)
          («k:let» ((key (car entry)))
            («k:cond»
             ((stringp key)
              «m:;; »«x:Don't include this in the previous condition, because we
»              «m:;; »«x:want to filter all strings before the next condition.
»              («k:when» (and sub-file-name
                         (>= (length sub-file-name) (length key))
                         (string-prefix-p key sub-file-name))
                (setq variables (dir-locals-collect-variables
                                 (cdr entry) root variables))))
             ((or (not key)
                  (derived-mode-p key))
              («k:let*» ((alist (cdr entry))
                     (subdirs (assq 'subdirs alist)))
                («k:if» (or (not subdirs)
                        («k:progn»
                          (setq alist (delq subdirs alist))
                          (cdr-safe subdirs))
                        «m:;; »«x:TODO someone might want to extend this to allow
»                        «m:;; »«x:integer values for subdir, where N means
»                        «m:;; »«x:variables apply to this directory and N levels
»                        «m:;; »«x:below it (0 == nil).
»                        (equal root default-directory))
                    (setq variables (dir-locals-collect-mode-variables
                                     alist variables))))))))
      («w:error»
       «m:;; »«x:The file's content might be invalid (e.g. have a merge conflict), but
»       «m:;; »«x:that shouldn't prevent the user from opening the file.
»       (message «s:"%s error: %s"» dir-locals-file (error-message-string err))
       nil))))

(«k:defun» «f:dir-locals-set-directory-class» (directory class «t:&optional» mtime)
  «d:"Declare that the DIRECTORY root is an instance of CLASS.
DIRECTORY is the name of a directory, a string.
CLASS is the name of a project class, a symbol.
MTIME is either the modification time of the directory-local
variables file that defined this class, or nil.

When a file beneath DIRECTORY is visited, the mode-specific
variables from CLASS are applied to the buffer.  The variables
for a class are defined using `«c:dir-locals-set-class-variables»'."»
  (setq directory (file-name-as-directory (expand-file-name directory)))
  («k:unless» (assq class dir-locals-class-alist)
    («w:error» «s:"No such class `«c:%s»'"» (symbol-name class)))
  (push (list directory class mtime) dir-locals-directory-cache))

(«k:defun» «f:dir-locals-set-class-variables» (class variables)
  «d:"Map the type CLASS to a list of variable settings.
CLASS is the project class, a symbol.  VARIABLES is a list
that declares directory-local variables for the class.
An element in VARIABLES is either of the form:
    (MAJOR-MODE . ALIST)
or
    (DIRECTORY . LIST)

In the first form, MAJOR-MODE is a symbol, and ALIST is an alist
whose elements are of the form (VARIABLE . VALUE).

In the second form, DIRECTORY is a directory name (a string), and
LIST is a list of the form accepted by the function.

When a file is visited, the file's class is found.  A directory
may be assigned a class using `«c:dir-locals-set-directory-class»'.
Then variables are set in the file's buffer according to the
VARIABLES list of the class.  The list is processed in order.

* If the element is of the form (MAJOR-MODE . ALIST), and the
  buffer's major mode is derived from MAJOR-MODE (as determined
  by `«c:derived-mode-p»'), then all the variables in ALIST are
  applied.  A MAJOR-MODE of nil may be used to match any buffer.
  `«c:make-local-variable»' is called for each variable before it is
  set.

* If the element is of the form (DIRECTORY . LIST), and DIRECTORY
  is an initial substring of the file's directory, then LIST is
  applied by recursively following these rules."»
  (setf (alist-get class dir-locals-class-alist) variables))

(«k:defconst» «v:dir-locals-file» «s:".dir-locals*.el"»
  «d:"Pattern for files that contain directory-local variables.
It has to be constant to enforce uniform values across different
environments and users.

Multiple dir-locals files in the same directory are loaded in
`«c:string<»' order.
See Info node `(elisp)Directory Local Variables' for details."»)

(«k:defun» «f:dir-locals--all-files» (file-or-dir)
  «d:"Return a list of all readable dir-locals files matching FILE-OR-DIR.
If FILE-OR-DIR is a file pattern, expand wildcards in it and
return a sorted list of the results.  If it is a directory name,
return a sorted list of all files matching `«c:dir-locals-file»' in
this directory.
The returned list is sorted by `«c:string<»' order."»
  («k:require» '«c:seq»)
  («k:let» ((default-directory («k:if» (file-directory-p file-or-dir)
                               file-or-dir
                             default-directory)))
    (seq-filter («k:lambda» (f) (and (file-readable-p f)
                            (file-regular-p f)))
                (file-expand-wildcards
                 («k:cond» ((not (file-directory-p file-or-dir)) file-or-dir)
                       ((eq system-type 'ms-dos) (dosified-file-name dir-locals-file))
                       (t dir-locals-file))
                 'full))))

(«k:defun» «f:dir-locals-find-file» (file)
  «d:"Find the directory-local variables for FILE.
This searches upward in the directory tree from FILE.
It stops at the first directory that has been registered in
`«c:dir-locals-directory-cache»' or contains a `«c:dir-locals-file»'.
If it finds an entry in the cache, it checks that it is valid.
A cache entry with no modification time element (normally, one that
has been assigned directly using `«c:dir-locals-set-directory-class»', not
set from a file) is always valid.
A cache entry based on a `«c:dir-locals-file»' is valid if the modification
time stored in the cache matches the current file modification time.
If not, the cache entry is cleared so that the file will be re-read.

This function returns either nil (no directory local variables found),
or the matching entry from `«c:dir-locals-directory-cache»' (a list),
or the full path to the `«c:dir-locals-file»' (a string) in the case
of no valid cache entry.  If `«c:dir-locals-file»' contains
wildcards, then the return value is not a proper filename, it is
an absolute version of `«c:dir-locals-file»' which is guaranteed to
expand to at least one file."»
  (setq file (expand-file-name file))
  («k:let*» ((locals-dir (locate-dominating-file (file-name-directory file)
                                             #'dir-locals--all-files))
         locals-file dir-elt)
    «m:;; »«x:`«c:locate-dominating-file»' may have abbreviated the name.
»    («k:when» locals-dir
      (setq locals-dir (expand-file-name locals-dir))
      (setq locals-file (expand-file-name («k:if» (eq system-type 'ms-dos)
                                              (dosified-file-name dir-locals-file)
                                            dir-locals-file)
                                          locals-dir)))
    «m:;; »«x:Find the best cached value in `«c:dir-locals-directory-cache»'.
»    («k:dolist» (elt dir-locals-directory-cache)
      («k:when» (and (string-prefix-p (car elt) file
                                  (memq system-type
                                        '(windows-nt cygwin ms-dos)))
                 (> (length (car elt)) (length (car dir-elt))))
        (setq dir-elt elt)))
    («k:if» (and dir-elt
             (or (null locals-dir)
                 (<= (length locals-dir)
                     (length (car dir-elt)))))
        «m:;; »«x:Found a potential cache entry.  Check validity.
»        «m:;; »«x:A cache entry with no MTIME is assumed to always be valid
»        «m:;; »«x:(ie, set directly, not from a dir-locals file).
»        «m:;; »«x:Note, we don't bother to check that there is a matching class
»        «m:;; »«x:element in dir-locals-class-alist, since that's done by
»        «m:;; »«x:dir-locals-set-directory-class.
»        («k:if» (or (null (nth 2 dir-elt))
                («k:let» ((cached-files (dir-locals--all-files (car dir-elt))))
                  «m:;; »«x:The entry MTIME should match the most recent
»                  «m:;; »«x:MTIME among matching files.
»                  (and cached-files
                       (= (time-to-seconds (nth 2 dir-elt))
                          (apply #'max (mapcar («k:lambda» (f) (time-to-seconds (nth 5 (file-attributes f))))
                                               cached-files))))))
            «m:;; »«x:This cache entry is OK.
»            dir-elt
          «m:;; »«x:This cache entry is invalid; clear it.
»          (setq dir-locals-directory-cache
                (delq dir-elt dir-locals-directory-cache))
          «m:;; »«x:Return the first existing dir-locals file.  Might be the same
»          «m:;; »«x:as dir-elt's, might not (eg latter might have been deleted).
»          locals-file)
      «m:;; »«x:No cache entry.
»      locals-file)))

(«k:defun» «f:dir-locals-read-from-file» (file)
  «d:"Load a variables FILE and register a new class and instance.
FILE is the absolute name of the file holding the variables to
apply.  It may contain wildcards.
The new class name is the same as the directory in which FILE
is found.  Returns the new class name."»
  («k:require» '«c:map»)
  («k:let*» ((dir-name (file-name-directory file))
         (class-name (intern dir-name))
         (files (dir-locals--all-files file))
         (read-circle nil)
         (success nil)
         (variables))
    (with-demoted-errors «s:"Error reading dir-locals: %S"»
      («k:dolist» (file files)
        («k:with-temp-buffer»
          (insert-file-contents file)
          (condition-case-unless-debug nil
              (setq variables
                    (map-merge-with 'list («k:lambda» (a b) (map-merge 'list a b))
                                    variables
                                    (read (current-buffer))))
            (end-of-file nil))))
      (setq success t))
    (dir-locals-set-class-variables class-name variables)
    (dir-locals-set-directory-class
     dir-name class-name
     (seconds-to-time
      («k:if» success
          (apply #'max (mapcar («k:lambda» (file)
                                 (time-to-seconds (nth 5 (file-attributes file))))
                               files))
        «m:;; »«x:If there was a problem, use the values we could get but
»        «m:;; »«x:don't let the cache prevent future reads.
»        0)))
    class-name))

(«k:defcustom» «v:enable-remote-dir-locals» nil
  «d:"Non-nil means dir-local variables will be applied to remote files."»
  «b::version» «s:"24.3"»
  «b::type» 'boolean
  «b::group» 'find-file)

(«k:defvar» «v:hack-dir-local-variables--warned-coding» nil)

(«k:defun» «f:hack-dir-local-variables» ()
  «d:"Read per-directory local variables for the current buffer.
Store the directory-local variables in `«c:dir-local-variables-alist»'
and `«c:file-local-variables-alist»', without applying them.

This does nothing if either `«c:enable-local-variables»' or
`«c:enable-dir-local-variables»' are nil."»
  («k:when» (and enable-local-variables
	     enable-dir-local-variables
	     (or enable-remote-dir-locals
		 (not (file-remote-p (or (buffer-file-name)
					 default-directory)))))
    «m:;; »«x:Find the variables file.
»    («k:let» ((file-pattern-or-cache (dir-locals-find-file
                                  (or (buffer-file-name) default-directory)))
	  (class nil)
	  (dir-name nil))
      («k:cond»
       ((stringp file-pattern-or-cache)
	(setq dir-name (file-name-directory file-pattern-or-cache)
	      class (dir-locals-read-from-file file-pattern-or-cache)))
       ((consp file-pattern-or-cache)
	(setq dir-name (nth 0 file-pattern-or-cache))
	(setq class (nth 1 file-pattern-or-cache))))
      («k:when» class
	(«k:let» ((variables
	       (dir-locals-collect-variables
		(dir-locals-get-class-variables class) dir-name nil)))
	  («k:when» variables
	    («k:dolist» (elt variables)
	      («k:if» (eq (car elt) 'coding)
                  («k:unless» hack-dir-local-variables--warned-coding
                    (setq hack-dir-local-variables--warned-coding t)
                    (display-warning «b::warning»
                                     «s:"Coding cannot be specified by dir-locals"»))
		(«k:unless» (memq (car elt) '(eval mode))
		  (setq dir-local-variables-alist
			(assq-delete-all (car elt) dir-local-variables-alist)))
		(push elt dir-local-variables-alist)))
	    (hack-local-variables-filter variables dir-name)))))))

(«k:defun» «f:hack-dir-local-variables-non-file-buffer» ()
  «d:"Apply directory-local variables to a non-file buffer.
For non-file buffers, such as Dired buffers, directory-local
variables are looked for in `«c:default-directory»' and its parent
directories."»
  (hack-dir-local-variables)
  (hack-local-variables-apply))


(«k:defcustom» «v:change-major-mode-with-file-name» t
  «d:"Non-nil means \\[«c:write-file»] should set the major mode from the file name.
However, the mode will not be changed if
\(1) a local variables list or the `«c:-*-»' line specifies a major mode, or
\(2) the current major mode is a \"special\" mode,
    not suitable for ordinary files, or
\(3) the new file name does not particularly specify any mode."»
  «b::type» 'boolean
  «b::group» 'editing-basics)

(«k:defun» «f:set-visited-file-name» (filename «t:&optional» no-query along-with-file)
  «d:"Change name of file visited in current buffer to FILENAME.
This also renames the buffer to correspond to the new file.
The next time the buffer is saved it will go in the newly specified file.
FILENAME nil or an empty string means mark buffer as not visiting any file.
Remember to delete the initial contents of the minibuffer
if you wish to pass an empty string as the argument.

The optional second argument NO-QUERY, if non-nil, inhibits asking for
confirmation in the case where another buffer is already visiting FILENAME.

The optional third argument ALONG-WITH-FILE, if non-nil, means that
the old visited file has been renamed to the new name FILENAME."»
  (interactive «s:"FSet visited file name: "»)
  («k:if» (buffer-base-buffer)
      («w:error» «s:"An indirect buffer cannot visit a file"»))
  («k:let» (truename old-try-locals)
    («k:if» filename
	(setq filename
	      («k:if» (string-equal filename «s:""»)
		  nil
		(expand-file-name filename))))
    («k:if» filename
	(«k:progn»
	  (setq truename (file-truename filename))
	  («k:if» find-file-visit-truename
	      (setq filename truename))))
    («k:if» filename
	(«k:let» ((new-name (file-name-nondirectory filename)))
	  («k:if» (string= new-name «s:""»)
	      («w:error» «s:"Empty file name"»))))
    («k:let» ((buffer (and filename (find-buffer-visiting filename))))
      (and buffer (not (eq buffer (current-buffer)))
	   (not no-query)
	   (not (y-or-n-p (format «s:"A buffer is visiting %s; proceed? "»
				  filename)))
	   (user-error «s:"Aborted"»)))
    (or (equal filename buffer-file-name)
	(«k:progn»
	  (and filename (lock-buffer filename))
	  (unlock-buffer)))
    (setq old-try-locals (not (inhibit-local-variables-p))
	  buffer-file-name filename)
    («k:if» filename			«m:; »«x:make buffer name reflect filename.
»	(«k:let» ((new-name (file-name-nondirectory buffer-file-name)))
	  (setq default-directory (file-name-directory buffer-file-name))
	  «m:;; »«x:If new-name == old-name, renaming would add a spurious <2>
»	  «m:;; »«x:and it's considered as a feature in rename-buffer.
»	  (or (string= new-name (buffer-name))
	      (rename-buffer new-name t))))
    (setq buffer-backed-up nil)
    (or along-with-file
	(clear-visited-file-modtime))
    «m:;; »«x:Abbreviate the file names of the buffer.
»    («k:if» truename
	(«k:progn»
	  (setq buffer-file-truename (abbreviate-file-name truename))
	  («k:if» find-file-visit-truename
	      (setq buffer-file-name truename))))
    (setq buffer-file-number
	  («k:if» filename
	      (nthcdr 10 (file-attributes buffer-file-name))
	    nil))
    «m:;; »«x:write-file-functions is normally used for things like ftp-find-file
»    «m:;; »«x:that visit things that are not local files as if they were files.
»    «m:;; »«x:Changing to visit an ordinary local file instead should flush the hook.
»    (kill-local-variable 'write-file-functions)
    (kill-local-variable 'local-write-file-hooks)
    (kill-local-variable 'revert-buffer-function)
    (kill-local-variable 'backup-inhibited)
    «m:;; »«x:If buffer was read-only because of version control,
»    «m:;; »«x:that reason is gone now, so make it writable.
»    («k:if» vc-mode
	(setq buffer-read-only nil))
    (kill-local-variable 'vc-mode)
    «m:;; »«x:Turn off backup files for certain file names.
»    «m:;; »«x:Since this is a permanent local, the major mode won't eliminate it.
»    (and buffer-file-name
	 backup-enable-predicate
	 (not (funcall backup-enable-predicate buffer-file-name))
	 («k:progn»
	   (make-local-variable 'backup-inhibited)
	   (setq backup-inhibited t)))
    («k:let» ((oauto buffer-auto-save-file-name))
      («k:cond» ((null filename)
	     (setq buffer-auto-save-file-name nil))
	    ((not buffer-auto-save-file-name)
	     «m:;; »«x:If auto-save was not already on, turn it on if appropriate.
»	     (and buffer-file-name auto-save-default (auto-save-mode t)))
	    (t
	     «m:;; »«x:If auto save is on, start using a new name. We
»	     «m:;; »«x:deliberately don't rename or delete the old auto save
»	     «m:;; »«x:for the old visited file name.  This is because
»	     «m:;; »«x:perhaps the user wants to save the new state and then
»	     «m:;; »«x:compare with the previous state from the auto save
»	     «m:;; »«x:file.
»	     (setq buffer-auto-save-file-name (make-auto-save-file-name))))
      «m:;; »«x:Rename the old auto save file if any.
»      (and oauto buffer-auto-save-file-name
	   (file-exists-p oauto)
	   (rename-file oauto buffer-auto-save-file-name t)))
    (and buffer-file-name
	 (not along-with-file)
	 (set-buffer-modified-p t))
    «m:;; »«x:Update the major mode, if the file name determines it.
»    («k:condition-case» nil
	«m:;; »«x:Don't change the mode if it is special.
»	(or (not change-major-mode-with-file-name)
	    (get major-mode 'mode-class)
	    «m:;; »«x:Don't change the mode if the local variable list specifies it.
»	    «m:;; »«x:The file name can influence whether the local variables apply.
»	    (and old-try-locals
		 «m:;; »«x:h-l-v also checks it, but might as well be explicit.
»		 (not (inhibit-local-variables-p))
		 (hack-local-variables t))
	    «m:;; »«x:TODO consider making normal-mode handle this case.
»	    («k:let» ((old major-mode))
	      (set-auto-mode t)
	      (or (eq old major-mode)
		  (hack-local-variables))))
    («w:error» nil))))

(«k:defun» «f:write-file» (filename «t:&optional» confirm)
  «d:"Write current buffer into file FILENAME.
This makes the buffer visit that file, and marks it as not modified.

If you specify just a directory name as FILENAME, that means to use
the default file name but in that directory.  You can also yank
the default file name into the minibuffer to edit it, using \\<minibuffer-local-map>\\[«c:next-history-element»].

If the buffer is not already visiting a file, the default file name
for the output file is the buffer name.

If optional second arg CONFIRM is non-nil, this function
asks for confirmation before overwriting an existing file.
Interactively, confirmation is required unless you supply a prefix argument."»
«m:;;  »«x:(interactive "FWrite file: ")
»  (interactive
   (list («k:if» buffer-file-name
	     (read-file-name «s:"Write file: "»
			     nil nil nil nil)
	   (read-file-name «s:"Write file: "» default-directory
			   (expand-file-name
			    (file-name-nondirectory (buffer-name))
			    default-directory)
			   nil nil))
	 (not current-prefix-arg)))
  (or (null filename) (string-equal filename «s:""»)
      («k:progn»
	«m:;; »«x:If arg is just a directory,
»	«m:;; »«x:use the default file name, but in that directory.
»	(«k:if» (file-directory-p filename)
	    (setq filename (concat (file-name-as-directory filename)
				   (file-name-nondirectory
				    (or buffer-file-name (buffer-name))))))
	(and confirm
	     (file-exists-p filename)
	     «m:;; »«x:NS does its own confirm dialog.
»	     (not (and (eq (framep-on-display) 'ns)
		       (listp last-nonmenu-event)
		       use-dialog-box))
	     (or (y-or-n-p (format-message
                            «s:"File `«c:%s»' exists; overwrite? "» filename))
		 (user-error «s:"Canceled"»)))
	(set-visited-file-name filename (not confirm))))
  (set-buffer-modified-p t)
  «m:;; »«x:Make buffer writable if file is writable.
»  (and buffer-file-name
       (file-writable-p buffer-file-name)
       (setq buffer-read-only nil))
  (save-buffer)
  «m:;; »«x:It's likely that the VC status at the new location is different from
»  «m:;; »«x:the one at the old location.
»  (vc-refresh-state))

(«k:defun» «f:file-extended-attributes» (filename)
  «d:"Return an alist of extended attributes of file FILENAME.

Extended attributes are platform-specific metadata about the file,
such as SELinux context, list of ACL entries, etc."»
  `((acl . ,(file-acl filename))
    (selinux-context . ,(file-selinux-context filename))))

(«k:defun» «f:set-file-extended-attributes» (filename attributes)
  «d:"Set extended attributes of file FILENAME to ATTRIBUTES.

ATTRIBUTES must be an alist of file attributes as returned by
`«c:file-extended-attributes»'.
Value is t if the function succeeds in setting the attributes."»
  («k:let» (result rv)
    («k:dolist» (elt attributes)
      («k:let» ((attr (car elt))
	    (val (cdr elt)))
	(«k:cond» ((eq attr 'acl)
               (setq rv (set-file-acl filename val)))
	      ((eq attr 'selinux-context)
               (setq rv (set-file-selinux-context filename val))))
        (setq result (or result rv))))

    result))

(«k:defun» «f:backup-buffer» ()
  «d:"Make a backup of the disk file visited by the current buffer, if appropriate.
This is normally done before saving the buffer the first time.

A backup may be done by renaming or by copying; see documentation of
variable `«c:make-backup-files»'.  If it's done by renaming, then the file is
no longer accessible under its old name.

The value is non-nil after a backup was made by renaming.
It has the form (MODES EXTENDED-ATTRIBUTES BACKUPNAME).
MODES is the result of `«c:file-modes»' on the original
file; this means that the caller, after saving the buffer, should change
the modes of the new file to agree with the old modes.
EXTENDED-ATTRIBUTES is the result of `«c:file-extended-attributes»'
on the original file; this means that the caller, after saving
the buffer, should change the extended attributes of the new file
to agree with the old attributes.
BACKUPNAME is the backup file name, which is the old file renamed."»
  («k:when» (and make-backup-files (not backup-inhibited) (not buffer-backed-up))
    («k:let» ((attributes (file-attributes buffer-file-name)))
      («k:when» (and attributes (memq (aref (elt attributes 8) 0) '(?- ?l)))
	«m:;; »«x:If specified name is a symbolic link, chase it to the target.
»	«m:;; »«x:This makes backups in the directory where the real file is.
»	(«k:let*» ((real-file-name (file-chase-links buffer-file-name))
	       (backup-info (find-backup-file-name real-file-name)))
	  («k:when» backup-info
	    («k:let*» ((backupname (car backup-info))
		   (targets (cdr backup-info))
		   (old-versions
		    «m:;; »«x:If have old versions to maybe delete,
»		    «m:;; »«x:ask the user to confirm now, before doing anything.
»		    «m:;; »«x:But don't actually delete til later.
»		    (and targets
			 (booleanp delete-old-versions)
			 (or delete-old-versions
			     (y-or-n-p
			      (format «s:"Delete excess backup versions of %s? "»
				      real-file-name)))
			 targets))
		   (modes (file-modes buffer-file-name))
		   (extended-attributes
		    (file-extended-attributes buffer-file-name))
		   (copy-when-priv-mismatch
		    backup-by-copying-when-privileged-mismatch)
		   (make-copy
		    (or file-precious-flag backup-by-copying
			«m:;; »«x:Don't rename a suid or sgid file.
»			(and modes (< 0 (logand modes #o6000)))
			(not (file-writable-p
			      (file-name-directory real-file-name)))
			(and backup-by-copying-when-linked
			     (< 1 (file-nlinks real-file-name)))
			(and (or backup-by-copying-when-mismatch
				 (and (integerp copy-when-priv-mismatch)
				      («k:let» ((attr (file-attributes
						   real-file-name
						   'integer)))
					(<= (nth 2 attr)
					    copy-when-priv-mismatch))))
			     (not (file-ownership-preserved-p real-file-name
							      t)))))
		   setmodes)
	      («k:condition-case» ()
		  («k:progn»
		    «m:;; »«x:Actually make the backup file.
»		    («k:if» make-copy
			(backup-buffer-copy real-file-name backupname
					    modes extended-attributes)
		      «m:;; »«x:rename-file should delete old backup.
»		      (rename-file real-file-name backupname t)
		      (setq setmodes (list modes extended-attributes
					   backupname)))
		    (setq buffer-backed-up t)
		    «m:;; »«x:Now delete the old versions, if desired.
»		    («k:dolist» (old-version old-versions)
		      (delete-file old-version)))
		(file-error nil))
	      «m:;; »«x:If trouble writing the backup, write it in .emacs.d/%backup%.
»	      («k:when» (not buffer-backed-up)
		(setq backupname (locate-user-emacs-file «s:"%backup%~"»))
		(message «s:"Cannot write backup file; backing up in %s"»
			 backupname)
		(sleep-for 1)
		(backup-buffer-copy real-file-name backupname
				    modes extended-attributes)
		(setq buffer-backed-up t))
	      setmodes)))))))

(«k:defun» «f:backup-buffer-copy» (from-name to-name modes extended-attributes)
  «m:;; »«x:Create temp files with strict access rights.  It's easy to
»  «m:;; »«x:loosen them later, whereas it's impossible to close the
»  «m:;; »«x:time-window of loose permissions otherwise.
»  (with-file-modes ?\700
    («k:when» («k:condition-case» nil
	      «m:;; »«x:Try to overwrite old backup first.
»	      (copy-file from-name to-name t t t)
	    («w:error» t))
      («k:while» («k:condition-case» nil
		 («k:progn»
		   («k:when» (file-exists-p to-name)
		     (delete-file to-name))
		   (copy-file from-name to-name nil t t)
		   nil)
	       (file-already-exists t))
	«m:;; »«x:The file was somehow created by someone else between
»	«m:;; »«x:`«c:delete-file»' and `«c:copy-file»', so let's try again.
»	«m:;; »«x:rms says "I think there is also a possible race
»	«m:;; »«x:condition for making backup files" (emacs-devel 20070821).
»	nil)))
  «m:;; »«x:If set-file-extended-attributes fails, fall back on set-file-modes.
»  («k:unless» (and extended-attributes
	       (with-demoted-errors
		 (set-file-extended-attributes to-name extended-attributes)))
    (and modes
	 (set-file-modes to-name (logand modes #o1777)))))

(«k:defvar» «v:file-name-version-regexp»
  «s:"«h:\\»«o:(?:»~«h:\\»«o:|»\\.~[-[:alnum:]:#@^._]+«h:\\»«o:(?:»~[[:digit:]]+«h:\\»«o:)»?~«h:\\»«o:)»"»
  «m:;; »«x:The last ~[[:digit]]+ matches relative versions in git,
»  «m:;; »«x:e.g. `«c:foo.js.~HEAD~1~»'.
»  «d:"Regular expression matching the backup/version part of a file name.
Used by `«c:file-name-sans-versions»'."»)

(«k:defun» «f:file-name-sans-versions» (name «t:&optional» keep-backup-version)
  «d:"Return file NAME sans backup versions or strings.
This is a separate procedure so your site-init or startup file can
redefine it.
If the optional argument KEEP-BACKUP-VERSION is non-nil,
we do not remove backup version numbers, only true file version numbers.
See also `«c:file-name-version-regexp»'."»
  («k:let» ((handler (find-file-name-handler name 'file-name-sans-versions)))
    («k:if» handler
	(funcall handler 'file-name-sans-versions name keep-backup-version)
      (substring name 0
		 («k:unless» keep-backup-version
                   (string-match (concat file-name-version-regexp «s:"\\'"»)
                                 name))))))

(«k:defun» «f:file-ownership-preserved-p» (file «t:&optional» group)
  «d:"Return t if deleting FILE and rewriting it would preserve the owner.
Return nil if FILE does not exist, or if deleting and recreating it
might not preserve the owner.  If GROUP is non-nil, check whether
the group would be preserved too."»
  («k:let» ((handler (find-file-name-handler file 'file-ownership-preserved-p)))
    («k:if» handler
	(funcall handler 'file-ownership-preserved-p file group)
      («k:let» ((attributes (file-attributes file 'integer)))
	«m:;; »«x:Return t if the file doesn't exist, since it's true that no
»	«m:;; »«x:information would be lost by an (attempted) delete and create.
»	(or (null attributes)
	    (and (or (= (nth 2 attributes) (user-uid))
		     «m:;; »«x:Files created on Windows by Administrator (RID=500)
»		     «m:;; »«x:have the Administrators group (RID=544) recorded as
»		     «m:;; »«x:their owner.  Rewriting them will still preserve the
»		     «m:;; »«x:owner.
»		     (and (eq system-type 'windows-nt)
			  (= (user-uid) 500) (= (nth 2 attributes) 544)))
		 (or (not group)
		     «m:;; »«x:On BSD-derived systems files always inherit the parent
»		     «m:;; »«x:directory's group, so skip the group-gid test.
»		     (memq system-type '(berkeley-unix darwin gnu/kfreebsd))
		     (= (nth 3 attributes) (group-gid)))
		 («k:let*» ((parent (or (file-name-directory file) «s:"."»))
			(parent-attributes (file-attributes parent 'integer)))
		   (and parent-attributes
			«m:;; »«x:On some systems, a file created in a setuid directory
»			«m:;; »«x:inherits that directory's owner.
»			(or
			 (= (nth 2 parent-attributes) (user-uid))
			 (string-match «s:"^...[«n:^»sS]"» (nth 8 parent-attributes)))
			«m:;; »«x:On many systems, a file created in a setgid directory
»			«m:;; »«x:inherits that directory's group.  On some systems
»			«m:;; »«x:this happens even if the setgid bit is not set.
»			(or (not group)
			    (= (nth 3 parent-attributes)
			       (nth 3 attributes)))))))))))

(«k:defun» «f:file-name-sans-extension» (filename)
  «d:"Return FILENAME sans final \"extension\".
The extension, in a file name, is the part that follows the last `.',
except that a leading `.', if any, doesn't count."»
  («k:save-match-data»
    («k:let» ((file (file-name-sans-versions (file-name-nondirectory filename)))
	  directory)
      («k:if» (and (string-match «s:"\\.[«n:^».]*\\'"» file)
	       (not (eq 0 (match-beginning 0))))
	  («k:if» (setq directory (file-name-directory filename))
	      «m:;; »«x:Don't use expand-file-name here; if DIRECTORY is relative,
»	      «m:;; »«x:we don't want to expand it.
»	      (concat directory (substring file 0 (match-beginning 0)))
	    (substring file 0 (match-beginning 0)))
	filename))))

(«k:defun» «f:file-name-extension» (filename «t:&optional» period)
  «d:"Return FILENAME's final \"extension\".
The extension, in a file name, is the part that follows the last `.',
excluding version numbers and backup suffixes,
except that a leading `.', if any, doesn't count.
Return nil for extensionless file names such as `«c:foo»'.
Return the empty string for file names such as `«c:foo.»'.

If PERIOD is non-nil, then the returned value includes the period
that delimits the extension, and if FILENAME has no extension,
the value is \"\"."»
  («k:save-match-data»
    («k:let» ((file (file-name-sans-versions (file-name-nondirectory filename))))
      («k:if» (and (string-match «s:"\\.[«n:^».]*\\'"» file)
	       (not (eq 0 (match-beginning 0))))
          (substring file (+ (match-beginning 0) («k:if» period 0 1)))
        («k:if» period
            «s:""»)))))

(«k:defun» «f:file-name-base» («t:&optional» filename)
  «d:"Return the base name of the FILENAME: no directory, no extension.
FILENAME defaults to `«c:buffer-file-name»'."»
  (file-name-sans-extension
   (file-name-nondirectory (or filename (buffer-file-name)))))

(«k:defcustom» «v:make-backup-file-name-function»
  #'make-backup-file-name--default-function
  «d:"A function that `«c:make-backup-file-name»' uses to create backup file names.
The function receives a single argument, the original file name.

If you change this, you may need to change `«c:backup-file-name-p»' and
`«c:file-name-sans-versions»' too.

You could make this buffer-local to do something special for specific files.

For historical reasons, a value of nil means to use the default function.
This should not be relied upon.

See also `«c:backup-directory-alist»'."»
  «b::version» «s:"24.4"»     «m:; »«x:nil -> make-backup-file-name--default-function
»  «b::group» 'backup
  «b::type» '(choice (const «b::tag» «s:"Deprecated way to get the default function"» nil)
		 (function «b::tag» «s:"Function"»)))

(«k:defcustom» «v:backup-directory-alist» nil
  «d:"Alist of filename patterns and backup directory names.
Each element looks like (REGEXP . DIRECTORY).  Backups of files with
names matching REGEXP will be made in DIRECTORY.  DIRECTORY may be
relative or absolute.  If it is absolute, so that all matching files
are backed up into the same directory, the file names in this
directory will be the full name of the file backed up with all
directory separators changed to `!' to prevent clashes.  This will not
work correctly if your filesystem truncates the resulting name.

For the common case of all backups going into one directory, the alist
should contain a single element pairing \".\" with the appropriate
directory name.

If this variable is nil, or it fails to match a filename, the backup
is made in the original file's directory.

On MS-DOS filesystems without long names this variable is always
ignored."»
  «b::group» 'backup
  «b::type» '(repeat (cons (regexp «b::tag» «s:"Regexp matching filename"»)
		       (directory «b::tag» «s:"Backup directory name"»))))

(«k:defun» «f:normal-backup-enable-predicate» (name)
  «d:"Default `«c:backup-enable-predicate»' function.
Checks for files in `«c:temporary-file-directory»',
`«c:small-temporary-file-directory»', and /tmp."»
  («k:let» ((temporary-file-directory temporary-file-directory)
	caseless)
    «m:;; »«x:On MS-Windows, file-truename will convert short 8+3 aliases to
»    «m:;; »«x:their long file-name equivalents, so compare-strings does TRT.
»    («k:if» (memq system-type '(ms-dos windows-nt))
	(setq temporary-file-directory (file-truename temporary-file-directory)
	      name (file-truename name)
	      caseless t))
    (not (or («k:let» ((comp (compare-strings temporary-file-directory 0 nil
					  name 0 nil caseless)))
	       «m:;; »«x:Directory is under temporary-file-directory.
»	       (and (not (eq comp t))
		    (< comp (- (length temporary-file-directory)))))
	     («k:let» ((comp (compare-strings «s:"/tmp"» 0 nil
					  name 0 nil)))
	       «m:;; »«x:Directory is under /tmp.
»	       (and (not (eq comp t))
		    (< comp (- (length «s:"/tmp"»)))))
	     («k:if» small-temporary-file-directory
		 («k:let» ((comp (compare-strings small-temporary-file-directory
					      0 nil
					      name 0 nil caseless)))
		   «m:;; »«x:Directory is under small-temporary-file-directory.
»		   (and (not (eq comp t))
			(< comp (- (length small-temporary-file-directory))))))))))

(«k:defun» «f:make-backup-file-name» (file)
  «d:"Create the non-numeric backup file name for FILE.
This calls the function that `«c:make-backup-file-name-function»' specifies,
with a single argument FILE."»
  (funcall (or make-backup-file-name-function
               #'make-backup-file-name--default-function)
           file))

(«k:defun» «f:make-backup-file-name--default-function» (file)
  «d:"Default function for `«c:make-backup-file-name»'.
Normally this just returns FILE's name with `~' appended.
It searches for a match for FILE in `«c:backup-directory-alist»'.
If the directory for the backup doesn't exist, it is created."»
  («k:if» (and (eq system-type 'ms-dos)
           (not (msdos-long-file-names)))
      («k:let» ((fn (file-name-nondirectory file)))
        (concat (file-name-directory file)
                (or (and (string-match «s:"\\`[«n:^».]+\\'"» fn)
                         (concat (match-string 0 fn) «s:".~"»))
                    (and (string-match «s:"\\`[«n:^».]+\\.«h:\\»«o:(»..?«h:\\»«o:)»?"» fn)
                         (concat (match-string 0 fn) «s:"~"»)))))
    (concat (make-backup-file-name-1 file) «s:"~"»)))

(«k:defun» «f:make-backup-file-name-1» (file)
  «d:"Subroutine of `«c:make-backup-file-name--default-function»'.
The function `«c:find-backup-file-name»' also uses this."»
  («k:let» ((alist backup-directory-alist)
	elt backup-directory abs-backup-directory)
    («k:while» alist
      (setq elt (pop alist))
      («k:if» (string-match (car elt) file)
	  (setq backup-directory (cdr elt)
		alist nil)))
    «m:;; »«x:If backup-directory is relative, it should be relative to the
»    «m:;; »«x:file's directory.  By expanding explicitly here, we avoid
»    «m:;; »«x:depending on default-directory.
»    («k:if» backup-directory
	(setq abs-backup-directory
	      (expand-file-name backup-directory
				(file-name-directory file))))
    («k:if» (and abs-backup-directory (not (file-exists-p abs-backup-directory)))
	(«k:condition-case» nil
	    (make-directory abs-backup-directory 'parents)
	  (file-error (setq backup-directory nil
			    abs-backup-directory nil))))
    («k:if» (null backup-directory)
	file
      («k:if» (file-name-absolute-p backup-directory)
	  («k:progn»
	    («k:when» (memq system-type '(windows-nt ms-dos cygwin))
	      «m:;; »«x:Normalize DOSish file names: downcase the drive
»	      «m:;; »«x:letter, if any, and replace the leading "x:" with
»	      «m:;; »«x:"/drive_x".
»	      (or (file-name-absolute-p file)
		  (setq file (expand-file-name file))) «m:; »«x:make defaults explicit
»	      «m:;; »«x:Replace any invalid file-name characters (for the
»	      «m:;; »«x:case of backing up remote files).
»	      (setq file (expand-file-name (convert-standard-filename file)))
	      («k:if» (eq (aref file 1) ?:)
		  (setq file (concat «s:"/"»
				     «s:"drive_"»
				     (char-to-string (downcase (aref file 0)))
				     («k:if» (eq (aref file 2) ?/)
					 «s:""»
				       «s:"/"»)
				     (substring file 2)))))
	    «m:;; »«x:Make the name unique by substituting directory
»	    «m:;; »«x:separators.  It may not really be worth bothering about
»	    «m:;; »«x:doubling `!'s in the original name...
»	    (expand-file-name
	     (subst-char-in-string
	      ?/ ?!
	      (replace-regexp-in-string «s:"!"» «s:"!!"» file))
	     backup-directory))
	(expand-file-name (file-name-nondirectory file)
			  (file-name-as-directory abs-backup-directory))))))

(«k:defun» «f:backup-file-name-p» (file)
  «d:"Return non-nil if FILE is a backup file name (numeric or not).
This is a separate function so you can redefine it for customization.
You may need to redefine `«c:file-name-sans-versions»' as well."»
    (string-match «s:"~\\'"» file))

(«k:defvar» «v:backup-extract-version-start»)

«m:;; »«x:This is used in various files.
»«m:;; »«x:The usage of backup-extract-version-start is not very clean,
»«m:;; »«x:but I can't see a good alternative, so as of now I am leaving it alone.
»(«k:defun» «f:backup-extract-version» (fn)
  «d:"Given the name of a numeric backup file, FN, return the backup number.
Uses the free variable `«c:backup-extract-version-start»', whose value should be
the index in the name where the version number begins."»
  («k:if» (and (string-match «s:"[0-9]+~/?$"» fn backup-extract-version-start)
	   (= (match-beginning 0) backup-extract-version-start))
      (string-to-number (substring fn backup-extract-version-start -1))
      0))

(«k:defun» «f:find-backup-file-name» (fn)
  «d:"Find a file name for a backup file FN, and suggestions for deletions.
Value is a list whose car is the name for the backup file
and whose cdr is a list of old versions to consider deleting now.
If the value is nil, don't make a backup.
Uses `«c:backup-directory-alist»' in the same way as
`«c:make-backup-file-name--default-function»' does."»
  («k:let» ((handler (find-file-name-handler fn 'find-backup-file-name)))
    «m:;; »«x:Run a handler for this function so that ange-ftp can refuse to do it.
»    («k:if» handler
	(funcall handler 'find-backup-file-name fn)
      («k:if» (or (eq version-control 'never)
	      «m:;; »«x:We don't support numbered backups on plain MS-DOS
»	      «m:;; »«x:when long file names are unavailable.
»	      (and (eq system-type 'ms-dos)
		   (not (msdos-long-file-names))))
	  (list (make-backup-file-name fn))
	(«k:let*» ((basic-name (make-backup-file-name-1 fn))
	       (base-versions (concat (file-name-nondirectory basic-name)
				      «s:".~"»))
	       (backup-extract-version-start (length base-versions))
	       (high-water-mark 0)
	       (number-to-delete 0)
	       possibilities deserve-versions-p versions)
	  («k:condition-case» ()
	      (setq possibilities (file-name-all-completions
				   base-versions
				   (file-name-directory basic-name))
		    versions (sort (mapcar #'backup-extract-version
					   possibilities)
				   #'<)
		    high-water-mark (apply 'max 0 versions)
		    deserve-versions-p (or version-control
					   (> high-water-mark 0))
		    number-to-delete (- (length versions)
					kept-old-versions
					kept-new-versions
					-1))
	    (file-error (setq possibilities nil)))
	  («k:if» (not deserve-versions-p)
	      (list (make-backup-file-name fn))
	    (cons (format «s:"%s.~%d~"» basic-name (1+ high-water-mark))
		  («k:if» (and (> number-to-delete 0)
			   «m:;; »«x:Delete nothing if there is overflow
»			   «m:;; »«x:in the number of versions to keep.
»			   (>= (+ kept-new-versions kept-old-versions -1) 0))
		      (mapcar («k:lambda» (n)
				(format «s:"%s.~%d~"» basic-name n))
			      («k:let» ((v (nthcdr kept-old-versions versions)))
				(rplacd (nthcdr (1- number-to-delete) v) ())
				v))))))))))

(«k:defun» «f:file-nlinks» (filename)
  «d:"Return number of names file FILENAME has."»
  (car (cdr (file-attributes filename))))

