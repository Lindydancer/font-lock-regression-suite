	finish_result(«v:OpT», «v:FT», «v:I2», «v:R0», «v:R»).

«f:finish_result1»(bag, «v:Bag0», «k:[]», «v:Bag») :- «k:!»,
	«v:Bag» = «v:Bag0».
«f:finish_result1»(set, «v:Bag»,  «k:[]», «v:Set») :- «k:!»,
