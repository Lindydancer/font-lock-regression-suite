	functor(«v:R», «v:Functor», «v:Arity»),
	finish_result(«v:Ops», «v:Finish», 1, «v:R0», «v:R»).

«f:finish_result»(«k:[]», «v:_», «v:_», «v:_», «v:_»).
«f:finish_result»(«k:[»«v:Op»«k:|»«v:OpT»«k:]», «k:[»«v:F»«k:|»«v:FT»«k:]», «v:I», «v:R0», «v:R») :-
